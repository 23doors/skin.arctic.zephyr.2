    <include name="Home_Menu_Item">
        <control type="button">
            <width>auto</width>
            <align>left</align>
            <height>70</height>
            <font>font_topbar_small</font>
            <focusedcolor>main_fg_30</focusedcolor>
            <selectedcolor>main_fg_30</selectedcolor>
            <textcolor>main_fg_30</textcolor>
            <onfocus>SetFocus($PARAM[id],$PARAM[pos])</onfocus>
            <onclick>$INFO[Container($PARAM[id]).ListItemAbsolute($PARAM[pos]).Property(path)]</onclick>
            <texturefocus />
            <texturenofocus />
            <textoffsetx>0</textoffsetx>
            <label>$INFO[Container($PARAM[id]).ListItemAbsolute($PARAM[pos]).Label]</label>
            <visible>!String.IsEqual(Container($PARAM[id]).ListItemAbsolute($PARAM[pos]).Label,Container($PARAM[id]).ListItem.Label)</visible>
            <visible>$PARAM[visible]</visible>
        </control>
        <control type="togglebutton">
            <width>auto</width>
            <align>left</align>
            <height>70</height>
            <font>font_topbar</font>
            <focusedcolor>main_fg_100</focusedcolor>
            <selectedcolor>main_fg_100</selectedcolor>
            <textcolor>main_fg_100</textcolor>
            <onfocus>SetFocus($PARAM[id],$PARAM[pos])</onfocus>
            <onclick>$INFO[Container($PARAM[id]).ListItemAbsolute($PARAM[pos]).Property(path)]</onclick>
            <texturenofocus />
            <texturefocus colordiffuse="main_fg_100" border="8">common/underline2.png</texturefocus>
            <alttexturenofocus colordiffuse="main_fg_100" border="8">common/underline2.png</alttexturenofocus>
            <alttexturefocus colordiffuse="main_fg_100" border="8">common/underline2.png</alttexturefocus>
            <textoffsetx>0</textoffsetx>
            <usealttexture>Control.HasFocus(301) + Skin.HasSetting(AuraStyleHome) + Skin.HasSetting(VerticalHome)</usealttexture>
            <!-- <animation effect="fade" start="100" end="30" condition="!Control.HasFocus(301)">Conditional</animation> -->
            <label>$INFO[Container($PARAM[id]).ListItemAbsolute($PARAM[pos]).Label]</label>
            <visible>String.IsEqual(Container($PARAM[id]).ListItemAbsolute($PARAM[pos]).Label,Container($PARAM[id]).ListItem.Label)</visible>
            <visible>$PARAM[visible]</visible>
        </control>
    </include>

    <include name="Home_Simple">
        <!-- Fake Menu -->
        <control type="list" id="301">
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(submenuVisibility,$INFO[Container(301).ListItem.Property(submenuVisibility)],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(leftHeader,$INFO[Container(301).ListItem.Label],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(widgetName,$INFO[Container(301).ListItem.Property(widgetName)],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(widgetName.backgroundWidget,$INFO[Container(301).ListItem.Property(widgetName.backgroundWidget)],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(widgetPath,$INFO[Container(301).ListItem.Property(widgetPath)],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(widgetTarget,$INFO[Container(301).ListItem.Property(widgetTarget)],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">SetProperty(widgetAspect,$INFO[Container(301).ListItem.Property(widgetAspect)],home)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + !Skin.HasSetting(SubmenuOnly)">ActivateWindow(1135)</ondown>
            <ondown condition="Integer.IsGreater(Container(302).NumItems,0) + Skin.HasSetting(SubmenuOnly)">302</ondown>
            <onup condition="!Player.HasVideo | !Skin.HasSetting(global.showvideo)">5600</onup>
            <onup condition="Player.HasVideo + Skin.HasSetting(global.showvideo)">noop</onup>
            <onfocus>ClearProperty(WidgetFocus,Home)</onfocus>
            <onfocus>ClearProperty(WidgetLoading,Home)</onfocus>
            <onfocus>AlarmClock(SetLoad,SetProperty(WidgetLoading,1,Home),00:00,silent)</onfocus>
            <orientation>horizontal</orientation>
            <height>10</height>
            <bottom>-100</bottom>
            <itemlayout width="200" />
            <focusedlayout width="200" />
            <content><include>skinshortcuts-mainmenu</include></content>
        </control>
        
        <!-- Global Widget -->
        <include>skinshortcuts-template-global</include>

        <!-- Background -->
        <control type="multiimage" id="7975">
            <left>-2160</left>
            <width>1</width>
            <height>1</height>
            <timeperimage>7000</timeperimage>
            <randomize>true</randomize>
            <fadetime>600</fadetime>
            <imagepath background="true">$VAR[Global_Background_Image_Var]</imagepath>
            <visible>System.HasAddon(script.colorbox)</visible>
            <visible>Skin.HasSetting(EnableBlur)</visible>
        </control>
        <include condition="Skin.HasSetting(global.showvideo)">Global_Videowindow</include>
        <include condition="Skin.HasSetting(global.showvisualisation)">Global_Visualisation</include>
        <control type="multiimage">
            <timeperimage>10000</timeperimage>
            <randomize>true</randomize>
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <fadetime>600</fadetime>
            <imagepath background="true">$VAR[Global_Background_Image]</imagepath>
            <visible>$EXP[Exp_GlobalBackground]</visible>
        </control>

        <control type="group">
            <top>900</top>
            <height>1080</height>
            <animation effect="slide" start="0" end="0,-900" time="350" tween="quadratic" easing="out" condition="[Control.HasFocus(5610) | Control.HasFocus(302)] + !Skin.HasSetting(SubmenuOnly)">Conditional</animation>
            <animation effect="slide" start="0" end="0,-285" time="350" tween="quadratic" easing="out" condition="[Control.HasFocus(5610) | Control.HasFocus(302)] + Skin.HasSetting(SubmenuOnly)">Conditional</animation>

            <animation effect="slide" start="0" end="0,-275" time="250" tween="quadratic" easing="out" condition="Control.HasFocus(5600)">Conditional</animation>
            <animation effect="slide" start="0" end="0,-625" time="300" tween="quadratic" easing="out" condition="Control.HasFocus(5600) + $EXP[Exp_InfoVisible]">Conditional</animation>
            <animation effect="slide" start="0" end="0,-900" time="300" tween="quadratic" condition="![Control.HasFocus(5610) | Control.HasFocus(302) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml)]">WindowClose</animation>
            <animation effect="slide" end="0" start="0,-900" time="300" tween="quadratic" condition="![Control.HasFocus(5610) | Control.HasFocus(302) | Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml)]">WindowOpen</animation>
            <animation effect="slide" start="0" end="0,-615" time="300" tween="quadratic" condition="Control.HasFocus(302) + !Control.IsVisible(5610)">WindowClose</animation>
            <animation effect="slide" end="0" start="0,-615" time="300" tween="quadratic" condition="Control.HasFocus(302) + !Control.IsVisible(5610)">WindowOpen</animation>
            <!-- Back Panel -->
            <control type="image">
                <texture colordiffuse="HomePanel">common/bg.jpg</texture>
            </control>
            <!-- Topbar For Submenu or Widget -->
            <control type="group">
                <visible>[Control.HasFocus(5610) | Control.HasFocus(302)] + !$EXP[Exp_InfoVisible]</visible>
                <animation effect="fade" time="200" start="100" end="0">Hidden</animation>
                <animation effect="fade" time="200" start="0" end="100">Visible</animation>
                <include content="Topbar">
                    <param name="info_hide" value="false" />
                </include>
            </control>
            <!-- Fake Topbar for Transition Animation -->
            <control type="group">
                <animation effect="fade" start="0" end="100" time="200">WindowClose</animation>
                <animation effect="fade" start="100" end="0" time="200">WindowOpen</animation>
                <include content="Topbar">
                    <param name="info_hide" value="false" />
                </include>
            </control>
            <!-- Menubar -->
            <control type="group">
                <animation effect="fade" start="100" end="0" time="200" condition="Control.HasFocus(302) | Control.HasFocus(5600)" reversible="false">Conditional</animation>
                <animation effect="fade" start="0" end="100" time="200" condition="![Control.HasFocus(302) | Control.HasFocus(5600)]" reversible="false">Conditional</animation>
                <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
                <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
                <include>Defs_InfoDialog_Visible</include>
                <include>Home_Menu</include>
                <control type="group">
                    <top>30</top>
                    <height>view_bottom</height>
                    <visible allowhiddenfocus="true">!$EXP[Exp_HideFurniture]</visible>
                    <include>Animation_FadeInOut</include>
                    <include content="Topbar_Right">
                        <param name="fgcolor" value="main_fg" />
                    </include>
                </control>
            </control>
            <!-- Up Widget -->
            <control type="group">
                <animation effect="fade" start="100" end="0" time="350" tween="cubic" easing="inout" condition="!Control.HasFocus(5600)">Conditional</animation>
                <include>Defs_InfoDialog_Visible</include>
                <control type="grouplist">
                    <top>75</top>
                    <bottom>0</bottom>
                    <left>400</left>
                    <right>400</right>
                    <orientation>vertical</orientation>
                    <itemgap>10</itemgap>
                    <usecontrolcoords>true</usecontrolcoords>
                    <control type="label">
                        <align>center</align>
                        <font>font_byline</font>
                        <textcolor>main_fg_70</textcolor>
                        <label fallback="31105">$INFO[Container(301).ListItem.Property(widgetName.backgroundWidget)]</label>
                        <height>30</height>
                    </control>
                    <control type="label">
                        <top>30</top>
                        <aligny>top</aligny>
                        <align>center</align>
                        <font>font_title</font>
                        <textcolor>main_fg_100</textcolor>
                        <label>$INFO[Container(5600).ListItem.Label,[B],[/B]]</label>
                        <height>85</height>
                    </control>
                    <control type="label">
                        <align>center</align>
                        <aligny>top</aligny>
                        <font>font_tiny</font>
                        <textcolor>main_fg_70</textcolor>
                        <label>$INFO[Container(5600).ListItem.Genre]</label>
                        <height>67</height>
                    </control>
                    <include content="Object_Icon_Ratings">
                        <param name="id" value="5600" />
                    </include>
                </control>
            </control>
            <!-- Down Widget -->
            <control type="group">
                <control type="group">
                    <include content="View_Group">
                        <param name="animation" value="Animation_Common_Home" />
                    </include>
                    <animation effect="fade" condition="![Control.HasFocus(5610) | Control.HasFocus(302)]" time="350" tween="cubic" easing="inout" start="100" end="0">Conditional</animation>
                
                    <include content="Home_Hub_Widget">
                        <param name="widget" value="!Skin.HasSetting(SubmenuOnly)" />
                        <onback>301</onback>
                        <onup>301</onup>
                    </include>

                </control>
            </control>
        </control>
    </include>

