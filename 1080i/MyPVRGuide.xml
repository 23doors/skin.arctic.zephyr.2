<?xml version="1.0" encoding="UTF-8"?>
<window>
    <menucontrol>300</menucontrol>
    <background>0</background>
    <defaultcontrol always="true">10</defaultcontrol>
    
    <views>10</views>

    <controls>
        <include>Global_Background</include>
        <include>Topbar</include>
        
        <control type="group" id="50">
            <control type="group">
                <visible>Control.IsVisible(10)</visible>
                <include>View_Group</include>

                <control type="panel" id="11">
                    <height>view_list_height</height>
                    <orientation>horizontal</orientation>
                    <ondown>10</ondown>
                    <onup>10</onup>
                    <itemlayout width="210" height="view_list_height">
                        <control type="label">
                            <align>left</align>
                            <aligny>top</aligny>
                            <textcolor>main_fg_30</textcolor>
                            <font>font_tiny_bold</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="210" height="view_list_height">
                        <control type="label">
                            <align>left</align>
                            <aligny>top</aligny>
                            <textcolor>main_fg_100</textcolor>
                            <font>font_tiny_bold</font>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                </control>

                <control type="epggrid" id="10" description="EPG">
                    <onup>11</onup>
                    <ondown>11</ondown>
                    <viewtype label="19069">list</viewtype>
                    <progresstexture border="5" colordiffuse="bf777777">pvr/progressline-full.png</progresstexture>
                    <scrolltime tween="quadratic">300</scrolltime>
                    <timeblocks>28</timeblocks>
                    <rulerunit>6</rulerunit>
                    <pagecontrol>8060</pagecontrol>
                    <rulerlayout height="view_list_height" width="521">
                        <control type="label" id="2">
                            <top>37</top>
                            <width>521</width>
                            <align>left</align>
                            <aligny>top</aligny>
                            <font>font_statusbar</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>main_fg_30</textcolor>
                        </control>
                    </rulerlayout>
                    <channellayout height="view_pvr_height" width="view_pvr_height">
                        <control type="group">
                            <left>0</left>
                            <right>4</right>
                            <top>4</top>
                            <control type="image">
                                <texture colordiffuse="main_fg_12" border="10">common/box.png</texture>
                            </control>
                            <control type="image">
                                <texture colordiffuse="main_fg_12">common/selected.png</texture>
                                <aspectratio aligny="top">center</aspectratio>
                                <visible>ListItem.IsPlaying</visible>
                            </control>
                        </control>
                        <include>Object_PVR_Icon</include>
                    </channellayout>
                    <focusedchannellayout height="view_pvr_height" width="view_pvr_height">
                        <control type="group">
                            <visible>!Control.HasFocus(10)</visible>
                            <control type="group">
                                <left>0</left>
                                <right>4</right>
                                <top>4</top>
                                <control type="image">
                                    <texture colordiffuse="main_fg_12" border="10">common/box.png</texture>
                                </control>
                                <control type="image">
                                    <texture colordiffuse="main_fg_12">common/selected.png</texture>
                                    <aspectratio aligny="top">center</aspectratio>
                                    <visible>ListItem.IsPlaying</visible>
                                </control>
                            </control>
                            <include>Object_PVR_Icon</include>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(10)</visible>
                            <control type="group">
                                <left>0</left>
                                <right>4</right>
                                <top>4</top>
                                <control type="image">
                                    <texture colordiffuse="main_fg_100" border="10">common/box.png</texture>
                                </control>
                                <control type="image">
                                    <texture colordiffuse="main_bg_12">common/selected.png</texture>
                                    <aspectratio aligny="top">center</aspectratio>
                                    <visible>ListItem.IsPlaying</visible>
                                </control>
                            </control>
                            <include content="Object_PVR_Icon">
                                <param name="fgcolor" value="main_bg" />
                                <param name="bgcolor" value="main_fg" />
                            </include>
                        </control>
                    </focusedchannellayout>
                    <itemlayout height="view_pvr_height" width="521">
                        <include>View_50_EPG_Itemlayout</include>
                    </itemlayout>
                    <focusedlayout height="view_pvr_height" width="521">
                        <include content="View_50_EPG_Itemlayout">
                            <param name="panelcolor" value="main_fg_100" />
                            <param name="fgcolor" value="main_bg_100" />
                            <param name="visible" value="Control.HasFocus(10)" />
                        </include>
                        <include content="View_50_EPG_Itemlayout">
                            <param name="visible" value="!Control.HasFocus(10)" />
                        </include>
                    </focusedlayout>
                </control>
            </control>
        </control>

        <control type="label" id="30">
            <description>Groups</description>
            <include>Defs_Hidden_Button</include>
        </control>

    </controls>
</window>
