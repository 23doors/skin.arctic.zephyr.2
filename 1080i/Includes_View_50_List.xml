<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_50_List">
        <control type="group">
            <visible>Control.IsVisible(50)</visible>
            <include>View_Group</include>
            <include content="View_50_Poster">
                <param name="height" value="810" />
                <param name="width" value="560" />
            </include>
            <include content="View_50_List_Control">
                <param name="left" value="560" />
                <param name="right" value="0" />
                <param name="id" value="50" />
                <param name="visible" value="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(actors)" />
            </include>
        </control>
    </include>

    <include name="View_500_List_Square">
        <control type="group">
            <visible>Control.IsVisible(500)</visible>
            <include>View_Group</include>
            <control type="group">
                <include content="View_50_Poster">
                    <param name="height" value="654" />
                    <param name="width" value="654" />
                    <param name="aspectratio" value="keep" />
                </include>
                <include>View_50_Info</include>
                <include content="View_50_List_Control">
                    <param name="left" value="654" />
                    <param name="right" value="0" />
                    <param name="id" value="500" />
                    <param name="visible" value="![Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(actors)]" />
                </include>
            </control>
        </control>
    </include>

    <include name="View_50_List_Control">
        <control type="panel" id="$PARAM[id]">
            <visible>$PARAM[visible]</visible>
            <left>$PARAM[left]</left>
            <right>$PARAM[right]</right>
            <height>780</height>
            <include>View_Vertical</include>
            <pagecontrol>60</pagecontrol>
            <itemlayout height="78">
                <include>View_50_Itemlayout</include>
            </itemlayout>
            <focusedlayout height="78">
                <control type="image">
                    <texture colordiffuse="main_fg_100" border="10">common/white.png</texture>
                </control>
                <include content="View_50_Itemlayout">
                    <param name="color" value="main_bg" />
                </include>
            </focusedlayout>
        </control>
    </include>

    <include name="View_50_Itemlayout">
        <param name="color" default="main_fg" />
        <definition>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <visible>Container.Content(movies)</visible>
                <control type="label">
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Year]</label>
                </control>
                <control type="label">
                    <left>90</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <right>127</right>
                    <align>right</align>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$VAR[Label_Duration]</label>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <right>65</right>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="$PARAM[color]_90">$VAR[Image_Overlay_List]</texture>
                    <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                    <visible>!ListItem.IsPlaying + !ListItem.IsSelected</visible>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Rating]</label>
                </control>
            </control>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <visible>Container.Content(songs)</visible>
                <control type="label">
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.TrackNumber]</label>
                </control>
                <control type="label">
                    <left>60</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Title]</label>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <visible>![Container.Content(songs) | Container.Content(movies)]</visible>
                <control type="label">
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[color]_100</textcolor>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_50_Info">
        <param name="height" default="654" />
        <param name="width" default="654" />
        <definition>
            <control type="group">
                <left>-15</left>
                <width>$PARAM[width]</width>
                <top>$PARAM[height]</top>
                <control type="grouplist">
                    <top>12</top>
                    <left>15</left>
                    <right>15</right>
                    <align>top</align>
                    <usecontrolcoords>true</usecontrolcoords>
                    <orientation>vertical</orientation>
                    <control type="label">
                        <aligny>top</aligny>
                        <align>center</align>
                        <height>50</height>
                        <font>font_title_small</font>
                        <textcolor>main_fg_100</textcolor>
                        <label>$VAR[Label_MainTitle]</label>
                    </control>
                    <control type="label">
                        <height>40</height>
                        <aligny>top</aligny>
                        <align>center</align>
                        <label>$VAR[Label_SubTitle]</label>
                        <textcolor>$VAR[ColorHighlight]</textcolor>
                        <font>font_small</font>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_50_Poster">
        <param name="height" default="810" />
        <param name="width" default="560" />
        <param name="include" default="" />
        <param name="visible" default="true" />
        <param name="left" default="-15" />
        <definition>
            <control type="group">
                <top>-15</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <include>$PARAM[include]</include>
                <visible>$PARAM[visible]</visible>
                <control type="group">
                    <height>$PARAM[height]</height>
                    <include content="Object_Geometric">
                        <param name="shadowdiffuse" value="$PARAM[shadowdiffuse]" />
                    </include>
                    <include content="Object_DefaultIcon">
                        <param name="icon" value="$PARAM[defaulticon]" />
                        <param name="visible" value="$PARAM[defaulticonvisible]" />
                    </include>
                    <include content="Object_Poster">
                        <param name="icon" value="$PARAM[icon]" />
                        <param name="aspectratio" value="$PARAM[aspectratio]" />
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>

