    <include name="View_50_List_Control">
        <param name="itemlayout" default="View_50_Itemlayout" />
        <param name="itemheight" default="view_list_height" />
        <param name="height" default="780" />
        <param name="top" default="0" />
        <param name="selectbox" default="true" />
        <param name="controllayout" default="View_Vertical" />
        <param name="controltype" default="panel" />
        <param name="viewtype" default="$LOCALIZE[535]" />
        <param name="forced" default="false" />
        <param name="duration" default="true" />
        <definition>
            <control type="$PARAM[controltype]" id="$PARAM[id]">
                <scrolltime tween="quadratic">400</scrolltime>
                <top>$PARAM[top]</top>
                <visible>$PARAM[visible]</visible>
                <left>$PARAM[left]</left>
                <right>$PARAM[right]</right>
                <height>$PARAM[height]</height>
                <include>$PARAM[controllayout]</include>
                <pagecontrol>60</pagecontrol>
                <viewtype label="$PARAM[viewtype]">$PARAM[viewtype]</viewtype>
                <include content="View_Forced" condition="$PARAM[forced]">
                    <param name="string" value="$PARAM[viewtype]" />
                </include>
                <itemlayout height="$PARAM[itemheight]">
                    <include content="$PARAM[itemlayout]">
                        <param name="duration" value="$PARAM[duration]" />
                    </include>
                </itemlayout>
                <focusedlayout height="$PARAM[itemheight]">
                    <control type="image">
                        <visible>$PARAM[selectbox]</visible>
                        <texture colordiffuse="main_fg_100" border="10">common/box.png</texture>
                    </control>
                    <include content="$PARAM[itemlayout]">
                        <param name="fgcolor" value="main_bg" />
                        <param name="bgcolor" value="main_fg" />
                        <param name="panelcolor" value="main_fg_100" />
                        <param name="duration" value="$PARAM[duration]" />
                    </include>
                </focusedlayout>
                <nested />
            </control>
        </definition>
    </include>

