<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_50_List">
        <control type="group">
            <visible>Control.IsVisible(50)</visible>
            <include>View_Group</include>
            <include content="View_50_Poster">
                <param name="height" value="810" />
                <param name="width" value="560" />
            </include>
            <include content="View_50_List_Control">
                <param name="left" value="560" />
                <param name="right" value="0" />
                <param name="id" value="50" />
                <param name="visible" value="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(actors)" />
            </include>
        </control>
    </include>

    <include name="View_500_List_Square">
        <control type="group">
            <visible>Control.IsVisible(500)</visible>
            <include>View_Group</include>
            <control type="group">
                <include content="View_50_Poster">
                    <param name="height" value="654" />
                    <param name="width" value="654" />
                    <param name="aspectratio" value="keep" />
                </include>
                <include>View_50_Info</include>
                <include content="View_50_List_Control">
                    <param name="left" value="654" />
                    <param name="right" value="0" />
                    <param name="id" value="500" />
                    <param name="visible" value="![Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(actors)]" />
                </include>
            </control>
        </control>
    </include>

    <include name="View_501_List_Landscape">
        <control type="group">
            <visible>Control.IsVisible(501)</visible>
            <include>View_Group</include>
            <include content="View_50_Poster">
                <param name="height" value="420" />
                <param name="width" value="723" />
                <param name="icon" value="$VAR[Image_Fanart]" />
            </include>
            <control type="grouplist">
                <top>420</top>
                <width>703</width>
                <bottom>-15</bottom>
                <orientation>vertical</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>0</itemgap>
                <control type="label">
                    <label>$INFO[ListItem.Label]</label>
                    <height>60</height>
                    <aligny>top</aligny>
                    <textcolor>main_fg_100</textcolor>
                    <font>font_title</font>
                </control>
                <include>Object_Info_Line</include>
                <include content="Object_Info_Ratings">
                    <param name="top" value="-15" />
                    <param name="imdbvotes" value="false" />
                    <param name="top250" value="false" />
                </include>
                <control type="textbox">
                    <top>15</top>
                    <label fallback="19055">$VAR[Label_Plot]</label>
                    <height>160</height>
                    <aligny>top</aligny>
                    <textcolor>main_fg_70</textcolor>
                    <font>font_plotbox</font>
                </control>
            </control>
            <include content="View_50_List_Control">
                <param name="left" value="733" />
                <param name="right" value="0" />
                <param name="id" value="501" />
                <param name="visible" value="Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(episodes)" />
            </include>
        </control>
    </include>

    <include name="View_50_List_Control">
        <param name="itemlayout" default="View_50_Itemlayout" />
        <param name="itemheight" default="view_list_height" />
        <param name="height" default="780" />
        <param name="top" default="0" />
        <param name="selectbox" default="true" />
        <param name="controllayout" default="View_Vertical" />
        <param name="controltype" default="panel" />
        <definition>
            <control type="$PARAM[controltype]" id="$PARAM[id]">
                <top>$PARAM[top]</top>
                <visible>$PARAM[visible]</visible>
                <left>$PARAM[left]</left>
                <right>$PARAM[right]</right>
                <height>$PARAM[height]</height>
                <include>$PARAM[controllayout]</include>
                <pagecontrol>60</pagecontrol>
                <itemlayout height="$PARAM[itemheight]">
                    <include>$PARAM[itemlayout]</include>
                </itemlayout>
                <focusedlayout height="$PARAM[itemheight]">
                    <control type="image">
                        <visible>$PARAM[selectbox]</visible>
                        <texture colordiffuse="main_fg_100" border="10">common/white.png</texture>
                    </control>
                    <include content="$PARAM[itemlayout]">
                        <param name="fgcolor" value="main_bg" />
                        <param name="bgcolor" value="main_fg" />
                        <param name="panelcolor" value="main_fg_100" />
                    </include>
                </focusedlayout>
            </control>
        </definition>
    </include>

    <include name="View_50_Itemlayout">
        <param name="fgcolor" default="main_fg" />
        <param name="bgcolor" default="main_bg" />
        <definition>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <visible>Container.Content(movies)</visible>
                <control type="label">
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Year]</label>
                </control>
                <control type="label">
                    <left>90</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <right>127</right>
                    <align>right</align>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$VAR[Label_Duration]</label>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <right>65</right>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="$PARAM[fgcolor]_90">$VAR[Image_Overlay_List]</texture>
                    <visible>!String.IsEmpty(ListItem.Overlay)</visible>
                    <visible>!ListItem.IsPlaying + !ListItem.IsSelected</visible>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Rating]</label>
                </control>
            </control>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <visible>Container.Content(songs)</visible>
                <control type="label">
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.TrackNumber]</label>
                </control>
                <control type="label">
                    <left>60</left>
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Title]</label>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <visible>![Container.Content(songs) | Container.Content(movies)]</visible>
                <control type="label">
                    <font>font_small_bold</font>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
                <control type="label">
                    <align>right</align>
                    <textcolor>$PARAM[fgcolor]_100</textcolor>
                    <label>$INFO[ListItem.Label2]</label>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_50_EPG_Itemlayout">
        <param name="fgcolor" default="main_fg_70" />
        <param name="panelcolor" default="main_fg_12" />
        <definition>
            <control type="image" id="2">
                <left>0</left>
                <width>517</width>
                <top>4</top>
                <texture colordiffuse="$PARAM[panelcolor]">common/white.png</texture>
            </control>
            <control type="image" id="2">
                <aspectratio align="right">keep</aspectratio>
                <top>5</top>
                <width>517</width>
                <height>24</height>
                <texture>indicator/timer.png</texture>
                <visible>ListItem.HasTimer</visible>
            </control>
            <control type="image" id="2">
                <aspectratio align="right">keep</aspectratio>
                <top>5</top>
                <width>517</width>
                <height>24</height>
                <texture>indicator/record.png</texture>
                <visible>ListItem.IsRecording</visible>
            </control>
            <control type="label" id="1">
                <left>20</left>
                <width>481</width>
                <centertop>33%</centertop>
                <textcolor>$PARAM[fgcolor]</textcolor>
                <textoffsetx>0</textoffsetx>
                <font>font_tiny_bold</font>
                <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" id="1">
                <left>20</left>
                <width>481</width>
                <centerbottom>33%</centerbottom>
                <textcolor>$PARAM[fgcolor]</textcolor>
                <textoffsetx>0</textoffsetx>
                <font>font_statusbar</font>
                <label>$INFO[ListItem.Genre]</label>
                <visible>!Skin.HasSetting(PVRGuideGenreName)</visible>
            </control>
            <control type="label" id="1">
                <left>20</left>
                <width>481</width>
                <centerbottom>33%</centerbottom>
                <textcolor>$PARAM[fgcolor]</textcolor>
                <textoffsetx>0</textoffsetx>
                <font>font_statusbar</font>
                <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                <visible>Skin.HasSetting(PVRGuideGenreName)</visible>
            </control>
        </definition>
    </include>

    <include name="View_50_PVR_Itemlayout_Item">
        <param name="mainitem" default="true" />
        <param name="listitem" default="ListItem." />
        <definition>
            <control type="group">
                <top>4</top>
                <right>4</right>
                <control type="image">
                    <texture colordiffuse="$PARAM[panelcolor]">common/white.png</texture>
                </control>
                <control type="image">
                    <texture colordiffuse="$PARAM[fgcolor]_12">common/selected.png</texture>
                    <aspectratio aligny="top">center</aspectratio>
                    <visible>ListItem.IsPlaying</visible>
                    <visible>$PARAM[mainitem]</visible>
                </control>
            </control>
            <control type="progress">
                <top>4</top>
                <right>4</right>
                <height>113</height>
                <texturebg>pvr/progressline-back.png</texturebg>
                <lefttexture border="5" colordiffuse="bf777777">pvr/progressline-left.png</lefttexture>
                <midtexture border="5" colordiffuse="bf777777">pvr/progressline-mid.png</midtexture>
                <righttexture border="5" colordiffuse="bf777777">pvr/progressline-right.png</righttexture>
                <info>ListItem.Progress</info>
                <visible>$PARAM[mainitem]</visible>
            </control>
            <control type="label">
                <left>30</left>
                <right>30</right>
                <top>26</top>
                <height>40</height>
                <aligny>top</aligny>
                <textcolor>$PARAM[fgcolor]_100</textcolor>
                <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                <font>font_tiny_bold</font>
                <label>$INFO[$PARAM[listitem]Title]</label>
            </control>
            <control type="label">
                <left>30</left>
                <right>30</right>
                <top>66</top>
                <height>40</height>
                <aligny>top</aligny>
                <textcolor>$PARAM[fgcolor]_100</textcolor>
                <selectedcolor>$PARAM[fgcolor]_100</selectedcolor>
                <font>font_statusbar</font>
                <label>$INFO[$PARAM[listitem]StartTime]$INFO[$PARAM[listitem]Genre,  -  ,]</label>
            </control>
        </definition>
    </include>

    <include name="View_50_PVR_Itemlayout">
        <param name="fgcolor" default="main_fg" />
        <param name="bgcolor" default="main_bg" />
        <param name="panelcolor" default="main_fg_12" />
        <definition>
            <control type="group">
                <width>view_pvr_height</width>
                <control type="group">
                    <top>4</top>
                    <right>4</right>
                    <control type="image">
                        <texture colordiffuse="$PARAM[panelcolor]">common/white.png</texture>
                    </control>
                    <control type="image">
                        <texture colordiffuse="$PARAM[fgcolor]_12">common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <visible>ListItem.IsPlaying</visible>
                    </control>
                </control>
                <include content="Object_PVR_Icon">
                    <param name="fgcolor" value="$PARAM[fgcolor]" />
                    <param name="bgcolor" value="$PARAM[bgcolor]" />
                </include>
            </control>
            <control type="group">
                <left>view_pvr_height</left>
                <visible>!Control.HasFocus(9000)</visible>
                <control type="group">
                    <left>0</left>
                    <left>320</left>
                    <control type="group">
                        <width>783.5</width>
                        <include content="View_50_PVR_Itemlayout_Item">
                            <param name="panelcolor" value="$PARAM[panelcolor]" />
                            <param name="fgcolor" value="$PARAM[fgcolor]" />
                            <param name="bgcolor" value="$PARAM[bgcolor]" />
                        </include>
                    </control>
                    <control type="group">
                        <left>783.5</left>
                        <width>783.5</width>
                        <include content="View_50_PVR_Itemlayout_Item">
                            <param name="panelcolor" value="main_fg_12" />
                            <param name="fgcolor" value="main_fg" />
                            <param name="bgcolor" value="main_bg" />
                            <param name="mainitem" value="false" />
                            <param name="listitem" value="ListItem.Next" />
                        </include>
                    </control>
                </control>
            </control>
            <control type="group">
                <left>view_pvr_height</left>
                <visible>Control.HasFocus(9000)</visible>
                <control type="group">
                    <left>0</left>
                    <left>320</left>
                    <control type="group">
                        <width>783.5</width>
                        <include content="View_50_PVR_Itemlayout_Item">
                            <param name="panelcolor" value="main_fg_12" />
                            <param name="fgcolor" value="main_fg" />
                            <param name="bgcolor" value="main_bg" />
                        </include>
                    </control>
                    <control type="group">
                        <left>783.5</left>
                        <width>783.5</width>
                        <include content="View_50_PVR_Itemlayout_Item">
                            <param name="panelcolor" value="$PARAM[panelcolor]" />
                            <param name="fgcolor" value="$PARAM[fgcolor]" />
                            <param name="bgcolor" value="$PARAM[bgcolor]" />
                            <param name="mainitem" value="false" />
                            <param name="listitem" value="ListItem.Next" />
                        </include>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_50_Info">
        <param name="height" default="654" />
        <param name="width" default="654" />
        <definition>
            <control type="group">
                <left>-15</left>
                <width>$PARAM[width]</width>
                <top>$PARAM[height]</top>
                <control type="grouplist">
                    <top>12</top>
                    <left>15</left>
                    <right>15</right>
                    <align>top</align>
                    <usecontrolcoords>true</usecontrolcoords>
                    <orientation>vertical</orientation>
                    <control type="label">
                        <aligny>top</aligny>
                        <align>center</align>
                        <height>50</height>
                        <font>font_title_small</font>
                        <textcolor>main_fg_100</textcolor>
                        <label>$VAR[Label_MainTitle]</label>
                    </control>
                    <control type="label">
                        <height>40</height>
                        <aligny>top</aligny>
                        <align>center</align>
                        <label>$VAR[Label_SubTitle]</label>
                        <textcolor>$VAR[ColorHighlight]</textcolor>
                        <font>font_small</font>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="View_50_Poster">
        <param name="height" default="810" />
        <param name="width" default="560" />
        <param name="include" default="" />
        <param name="visible" default="true" />
        <param name="left" default="-15" />
        <definition>
            <control type="group">
                <top>-15</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <include>$PARAM[include]</include>
                <visible>$PARAM[visible]</visible>
                <control type="group">
                    <height>$PARAM[height]</height>
                    <include content="Object_Geometric">
                        <param name="shadowdiffuse" value="$PARAM[shadowdiffuse]" />
                    </include>
                    <include content="Object_DefaultIcon">
                        <param name="icon" value="$PARAM[defaulticon]" />
                        <param name="visible" value="$PARAM[defaulticonvisible]" />
                    </include>
                    <include content="Object_Poster">
                        <param name="icon" value="$PARAM[icon]" />
                        <param name="aspectratio" value="$PARAM[aspectratio]" />
                    </include>
                </control>
            </control>
        </definition>
    </include>
</includes>

