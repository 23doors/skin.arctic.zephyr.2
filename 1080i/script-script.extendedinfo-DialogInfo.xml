    <onload>SetProperty(1350_onback,SetFocus(8000))</onload>
    <onload>SetProperty(1450_onback,SetFocus(8000))</onload>
    <controls>

        <include>Global_Background</include>
        
        <include content="Topbar">
            <param name="info_hide" value="false" />
        </include>

        <control type="group">
            <animation effect="slide" end="-1920" time="200" condition="Control.HasFocus(150)">Conditional</animation>
            <animation effect="slide" end="1920" time="200" condition="Control.HasFocus(750)">Conditional</animation>
            <control type="list" id="750">
                <left>-1920</left>
                <orientation>horizontal</orientation>
                <width>1920</width>
                <height>1080</height>
                <onright>8000</onright>
                <onleft>noop</onleft>
                <preloaditems>2</preloaditems>
                <itemlayout width="1920" height="1080">
                    <control type="group">
                        <include>View_Pad</include>
                        <include content="Object_Geometric">
                            <param name="pad" value="-15" />
                        </include>
                        <control type="image">
                            <texture background="true">$INFO[ListItem.Art(original)]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="1920" height="1080">
                    <control type="group">
                        <include>View_Pad</include>
                        <include content="Object_Geometric">
                            <param name="pad" value="-15" />
                        </include>
                        <control type="image">
                            <texture background="true">$INFO[ListItem.Art(original)]</texture>
                            <aspectratio>scale</aspectratio>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="group">
                <width>1920</width>
                <height>1080</height>
                <control type="group">
                    <include>View_Pad</include>
                    <control type="grouplist" id="8100">
                        <orientation>vertical</orientation>
                        <itemgap>825</itemgap>
                        <top>-15</top>
                        <left>-15</left>
                        <right>-15</right>
                        <height>825</height>
                        <control type="group" id="5200">
                            <height>825</height>
                            <control type="button" id="8000">
                                <include>Defs_Hidden_Button</include>
                                <ondown>SetFocus(250,0,absolute)</ondown>
                                <onright>SetFocus(150,0,absolute)</onright>
                                <onleft>SetFocus(750,9999,absolute)</onleft>
                            </control>
                            <control type="group">
                                <top>15</top>
                                <left>15</left>
                                <right>15</right>
                                <height>780</height>
                                <!-- Poster -->
                                <include content="View_50_Poster">
                                    <param name="include" value="Animation_Left_Delay" />
                                    <param name="defaulticonvisible" value="false" />
                                    <param name="icon" value="$INFO[Window.Property(thumb)]" />
                                </include>
                                <!-- Info -->
                                <control type="group">
                                    <top>-15</top>
                                    <left>575</left>
                                    <include>Animation_Right_Delay</include>
                                    <control type="grouplist">
                                        <orientation>vertical</orientation>
                                        <usecontrolcoords>true</usecontrolcoords>
                                        <itemgap>0</itemgap>
                                        <include content="Object_Info_Title">
                                            <param name="label" value="$INFO[Window.Property(label)]" />
                                        </include>
                                        <include content="Object_Info_Line">
                                            <param name="hdsd" value="false" />
                                            <param name="nextaired" value="false" />
                                            <param name="label" value="[CAPITALIZE]$INFO[Window.Property(Birthday),[COLOR=main_fg_100],[/COLOR]]$INFO[Window.Property(PlaceOfBirth),  |  [COLOR=main_fg_100],[/COLOR]]$INFO[Window.Property(Age),  |  [COLOR=main_fg_100], $LOCALIZE[31356][/COLOR]]$INFO[Window.Property(Deathday),  |  [COLOR=main_fg_100]$LOCALIZE[21897] ,[/COLOR]][/CAPITALIZE]" />
                                        </include>
                                        <include content="Object_Info_Plot">
                                            <param name="label" value="$INFO[Window.Property(biography)]" />
                                            <param name="maxheight" value="600" />
                                            <param name="height" value="600" />
                                        </include>
                                        <!-- <include>Object_Info_Ratings</include> -->
                                        <!-- <include>Object_Info_Details</include> -->
                                    </control>
                                </control>
                            </control>
                        </control>
                        <control type="grouplist" id="5100">
                            <height>825</height>
                            <orientation>vertical</orientation>
                            <itemgap>0</itemgap>
