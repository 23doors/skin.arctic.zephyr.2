<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">8</defaultcontrol>
    <controls>

        <include>Global_Background</include>
        <include>Topbar</include>

        <control type="grouplist" id="9000">
            <orientation>horizontal</orientation>
            <itemgap>0</itemgap>

            <!-- Movie / TvShow Info -->
            <control type="group">
                <width>1920</width>
                <height>1080</height>
                <control type="group">
                    <include>View_Pad</include>
                    <control type="button" id="8">
                        <include>Defs_Hidden_Button</include>
                        <onleft>noop</onleft>
                        <onright>SetFocus(150,0,absolute)</onright>
                    </control>

                    <!-- Poster -->
                    <include content="View_50_Poster">
                        <param name="include" value="Animation_Left_Delay" />
                        <param name="defaulticonvisible" value="false" />
                        <param name="icon" value="$INFO[Window.Property(thumb)]" />
                    </include>

                    <!-- Info -->
                    <control type="group">
                        <top>-15</top>
                        <left>575</left>
                        <include>Animation_Right_Delay</include>
                        <control type="grouplist">
                            <orientation>vertical</orientation>
                            <usecontrolcoords>true</usecontrolcoords>
                            <itemgap>0</itemgap>
                            <include content="Object_Info_Title">
                                <param name="label" value="$INFO[Window.Property(label)]" />
                            </include>
                            <include content="Object_Info_Line">
                                <param name="hdsd" value="false" />
                                <param name="nextaired" value="false" />
                                <param name="label" value="[CAPITALIZE]$INFO[Window.Property(Birthday),[COLOR=main_fg_100],[/COLOR]]$INFO[Window.Property(PlaceOfBirth),  |  [COLOR=main_fg_100],[/COLOR]]$INFO[Window.Property(Age),  |  [COLOR=main_fg_100], $LOCALIZE[31356][/COLOR]]$INFO[Window.Property(Deathday),  |  [COLOR=main_fg_100]$LOCALIZE[21897] ,[/COLOR]][/CAPITALIZE]" />
                            </include>
                            <include content="Object_Info_Plot">
                                <param name="label" value="$INFO[Window.Property(biography)]" />
                                <param name="maxheight" value="600" />
                                <param name="height" value="600" />
                            </include>
                            <!-- <include>Object_Info_Ratings</include> -->
                            <!-- <include>Object_Info_Details</include> -->
                        </control>
                    </control>
                </control>
            </control>

            <control type="group">
                <width>1920</width>
                <height>1080</height>
                <control type="group">
                    <include>View_Pad</include>
                    <control type="grouplist">
                        <height>825</height>
                        <left>-15</left>
                        <top>-15</top>
                        <right>-15</right>
                        <orientation>vertical</orientation>
                        <itemgap>0</itemgap>
                        <onup>8</onup>
                        <ondown>noop</ondown>
                        <include content="View_51_Wall_Container" description="Movies">
                            <param name="id" value="150" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(150).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Character_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                            <param name="onup" value="8" />
                        </include>
                        <include content="View_51_Wall_Container" description="TVShows">
                            <param name="id" value="250" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(250).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Character_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                        </include>
                        <include content="View_51_Wall_Container" description="Crew">
                            <param name="id" value="550" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(550).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Job_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                        </include>
                        <include content="View_51_Wall_Container" description="TV Crew">
                            <param name="id" value="650" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(650).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Job_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                        </include>
                        <include content="View_51_Wall_Container" description="Youtube">
                            <param name="id" value="350" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(350).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Job_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                            <param name="itemwidth" value="570" />
                            <param name="itemheight" value="423.75" />
                            <param name="iconheight" value="333.75" />
                        </include>
                        <include content="View_51_Wall_Container" description="Tagged Images">
                            <param name="id" value="750" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(750).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Job_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                            <param name="itemwidth" value="342" />
                            <param name="aspectratio" value="keep" />
                        </include>
                        <include content="View_51_Wall_Container" description="Images">
                            <param name="id" value="450" />
                            <param name="height" value="412.5" />
                            <param name="visible" value="Integer.IsGreater(Container(450).NumItems,0)" />
                            <param name="labelinclude" value="View_Cast_Job_Label" />
                            <param name="controlorientation" value="View_Horizontal_Back" />
                            <param name="onleft" value="" />
                            <param name="onright" value="" />
                            <param name="ondown" value="noop" />
                        </include>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
