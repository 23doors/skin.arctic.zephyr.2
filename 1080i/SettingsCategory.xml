<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="12">
    <defaultcontrol always="true">300</defaultcontrol>
    <include>Defs_Settings_OnLoad</include>
    <onunload condition="!Skin.HasSetting(startup.init)">Skin.SetBool(startup.init)</onunload>
    <controls>

        <include>Global_Background</include>
        <include>Topbar</include>
        <control type="image">
            <animation type="WindowOpen" reversible="false" condition="!Window.Previous(SettingsCategory.xml) + !Window.Previous(SkinSettings.xml) + !Window.Previous(SettingsProfile.xml) + !Window.Previous(SettingsSystemInfo.xml)">
                <effect type="fade" start="0" end="100" time="300" delay="0"/>
            </animation>
            <include>Dimensions_Fullscreen</include>
            <texture border="2">common/black-back.png</texture>
        </control>
        <control type="group">
            <include>Dialog_Settings_Group</include>
    
            <include content="Defs_Settings_Changer">
                <onright>3</onright>
            </include>

            

            <control type="group">
                <left>view_list_height</left>
                <control type="grouplist" id="3">
                    <description>button area</description>
                    <left>0</left>
                    <top>dialog_top</top>
                    <width>dialog_side_grouplist</width>
                    <height>780</height>
                    <itemgap>0</itemgap>
                    <onright>5</onright>
                    <ondown>20</ondown>
                    <include>Defs_Settings_OnLeft</include>
                </control>

                
                <control type="button" id="20">
                    <width>dialog_side_grouplist</width>
                    <bottom>0</bottom>
                    <textoffsetx>77</textoffsetx>
                    <onup>3</onup>
                    <textcolor>dialog_fg_30</textcolor>
                    <font>font_statusbar</font>
                    <onclick>SettingsLevelChange</onclick>
                    <focusedcolor>Selected</focusedcolor>
                    <texturefocus colordiffuse="$VAR[ColorHighlight]">common/white.png</texturefocus>
                    <include>Defs_Settings_Button</include>
                </control>
                <control type="image">
                    <left>15</left>
                    <bottom>0</bottom>
                    <height>75</height>
                    <width>52</width>
                    <aspectratio aligny="center">keep</aspectratio>
                    <texture colordiffuse="dialog_fg_30">osd/settings.png</texture>
                    <visible>!Control.HasFocus(20)</visible>
                </control>
                <control type="image">
                    <left>15</left>
                    <bottom>0</bottom>
                    <height>75</height>
                    <width>52</width>
                    <aspectratio aligny="center">keep</aspectratio>
                    <texture colordiffuse="Selected">osd/settings.png</texture>
                    <visible>Control.HasFocus(20)</visible>
                </control>

                <control type="grouplist" id="5">
                    <description>control area</description>
                    <left>dialog_side_grouplist</left>
                    <top>dialog_top</top>
                    <right>0</right>
                    <height>780</height>
                    <itemgap>0</itemgap>
                    <onleft>3</onleft>
                    <pagecontrol>61</pagecontrol>
                    <usecontrolcoords>true</usecontrolcoords>
                </control>

                <control type="group">
                    <!-- <visible>!Control.HasFocus(300)</visible> -->
                    <left>dialog_side_grouplist</left>
                    <bottom>0</bottom>
                    <height>78</height>
                    <control type="image">
                        <left>26</left>
                        <centertop>50%</centertop>
                        <height>32</height>
                        <width>32</width>
                        <aspectratio align="left">keep</aspectratio>
                        <texture colordiffuse="dialog_fg_30">buttons/info.png</texture>
                    </control>
                    <control type="textbox" id="6">
                        <centertop>50%</centertop>
                        <left>82</left>
                        <right>30</right>
                        <height>60</height>
                        <textcolor>dialog_fg_30</textcolor>
                        <font>font_statusbar</font>
                        <aligny>center</aligny>
                    </control>
                </control>

                <include>Dialog_Separator</include>
            </control>

            <include content="Dialog_Separator">
                <param name="left" value="view_list_height" />
            </include>
        </control>
     
        <control type="button" id="7">
            <description>Default Button</description>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="radiobutton" id="8">
            <description>Default Radio Button</description>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="spincontrolex" id="9">
            <description>Default Spin Control</description>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="togglebutton" id="10">
            <width>450</width>
            <description>Default Category Button</description>
            <include>Defs_Settings_Button</include>
        </control>

        <control type="label" id="14">
            <include>Dialog_Standard_HintLabel</include>
            <!-- <textoffsetx>view_pad</textoffsetx>
            <font>font_button</font>
            <textcolor>main_fg_30</textcolor>
            <include>Defs_Settings_Button</include> -->
        </control>

    </controls>

</window>
