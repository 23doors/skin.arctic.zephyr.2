<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="0">
    <defaultcontrol always="false">301</defaultcontrol>
    
    <onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=301&amp;mode=single&amp;group=mainmenu|powermenu)</onload>
    <onload condition="!Skin.HasSetting(SkinHelper.EnablePVRThumbs)">Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
    <onload condition="!Skin.HasSetting(SkinHelper.EnableMusicArt)">Skin.SetBool(SkinHelper.EnableMusicArt)</onload>
    <onload>ClearProperty(HomeFocus,Home)</onload>

    <onload>AlarmClock(SkinSplashStarted,SetProperty(SkinSplashStarted,1,home),00:01,silent,false)</onload>

    <onload>ClearProperty(WidgetLoading,Home)</onload>
    <onload>AlarmClock(SetLoad,SetProperty(WidgetLoading,1,Home),00:00,silent)</onload>

    <onunload>ClearProperty(SkinHelper.WidgetContainer)</onunload>

    <controls>
        <include>Global_Background</include>
        <include>Topbar</include>


        <control type="group">
            <include>View_Group</include>
            <control type="grouplist">
                <top>-15</top>
                <right>-15</right>
                <left>-15</left>
                <bottom>-15</bottom>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>35</itemgap>
                <control type="panel" id="301">
                    <left>15</left>
                    <animation effect="fade" start="100" end="0" time="200" condition="ControlGroup(3100).HasFocus()">Conditional</animation>
                    <top>-7</top>
                    <onright>3100</onright>
                    <width>194.28</width>
                    <orientation>vertical</orientation>                
                    <itemlayout width="194.28" height="view_list_height">
                        <control type="image">
                            <top>3</top>
                            <left>-22</left>
                            <aspectratio>keep</aspectratio>
                            <width>view_list_height</width>
                            <bordersize>6</bordersize>
                            <texture colordiffuse="main_fg_30">$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="label">
                            <left>60</left>
                            <font>font_topbar_small</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <textcolor>main_fg_30</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="194.28" height="view_list_height">
                        <control type="image">
                            <top>3</top>
                            <left>-22</left>
                            <aspectratio>keep</aspectratio>
                            <width>view_list_height</width>
                            <bordersize>6</bordersize>
                            <texture colordiffuse="main_fg_100">$INFO[ListItem.Icon]</texture>
                        </control>
                        <control type="label">
                            <left>60</left>
                            <font>font_topbar</font>
                            <align>left</align>
                            <aligny>center</aligny>
                            <textcolor>main_fg_100</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                    <content><include>skinshortcuts-mainmenu</include></content>
                </control>
                <control type="grouplist" id="3100">
                    <onleft>301</onleft>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <height>825</height>
                    <width>1710</width>
                    <orientation>vertical</orientation>
                    <itemgap>-52</itemgap>
                    <usecontrolcoords>true</usecontrolcoords>
                    <control type="group" id="7599"><height>0</height></control>
                    <include content="View_Cast_Toplabel">
                        <param name="groupid" value="7500" />
                        <param name="id" value="3101" />
                        <param name="label" value="Random Movies" />
                    </include>
                    <include content="View_51_Wall_Container">
                        <param name="controllayout" value="View_Cast" />
                        <param name="id" value="3101" />
                        <param name="height" value="360.5" />
                        <param name="orientation" value="horizontal" />
                        <param name="labelinclude" value="" />
                        <param name="onleft" value="301" />
                        <param name="onright" value="3101" />
                        <param name="visible" value="Integer.IsGreater(Container(3101).NumItems,0) | Container(3101).IsUpdating" />
                        <content target="videos" limit="25" sortby="random">videodb://movies/titles/</content>
                        <onback>SetFocus(3101)</onback>
                        <onback>300</onback>
                    </include>
                    <include content="View_Cast_Toplabel">
                        <param name="groupid" value="7501" />
                        <param name="id" value="3102" />
                        <param name="label" value="Recently Added Movies" />
                    </include>
                    <include content="View_51_Wall_Container">
                        <param name="controllayout" value="View_Cast" />
                        <param name="id" value="3102" />
                        <param name="height" value="360.5" />
                        <param name="orientation" value="horizontal" />
                        <param name="labelinclude" value="" />
                        <param name="onleft" value="301" />
                        <param name="onright" value="3102" />
                        <param name="visible" value="Integer.IsGreater(Container(3102).NumItems,0) | Container(3102).IsUpdating" />
                        <content target="videos" limit="25" sortby="dateadded" sortorder="descending">videodb://movies/titles/</content>
                        <onback>SetFocus(3102)</onback>
                        <onback>300</onback>
                    </include>

                    <include content="View_Cast_Toplabel">
                        <param name="groupid" value="7502" />
                        <param name="id" value="3103" />
                        <param name="label" value="Recently Played Movies" />
                    </include>
                    <include content="View_51_Wall_Container">
                        <param name="controllayout" value="View_Cast" />
                        <param name="id" value="3103" />
                        <param name="height" value="360.5" />
                        <param name="orientation" value="horizontal" />
                        <param name="labelinclude" value="" />
                        <param name="onleft" value="301" />
                        <param name="onright" value="3103" />
                        <param name="visible" value="Integer.IsGreater(Container(3103).NumItems,0) | Container(3103).IsUpdating" />
                        <content target="videos" limit="25" sortby="lastplayed" sortorder="descending">videodb://movies/titles/</content>
                        <onback>SetFocus(3103)</onback>
                        <onback>300</onback>
                    </include>
                </control>
            </control>
        </control>

        <!-- Splash -->
        <control type="image" description="Background">
            <include>Dimensions_Fullscreen</include>
            <texture colordiffuse="Background">common/bg.jpg</texture>
            <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
            <visible>String.IsEmpty(Window(Home).Property(SkinSplashStarted)) | Integer.IsEqual(Container(301).NumItems,0) | Container(301).IsUpdating</visible>
            <animation effect="fade" start="100" end="0" delay="600" time="600" tween="quadratic">Hidden</animation>
        </control>
        <control type="label">
            <description>Loading</description>
            <include>Dimensions_Fullscreen</include>
            <align>center</align>
            <aligny>center</aligny>
            <label>Arctic [COLOR=$VAR[ColorHighlight]]Zephyr[/COLOR][COLOR=main_fg_12] 2[/COLOR]</label>
            <font>font_splash</font>
            <textcolor>main_fg_100</textcolor>
            <visible>String.IsEmpty(Window(Home).Property(SkinSplashStarted)) | Integer.IsEqual(Container(301).NumItems,0) | Container(301).IsUpdating</visible>
            <animation effect="fade" start="100" end="0" delay="0" time="600" tween="quadratic">Hidden</animation>
            <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
        </control>
        <control type="group">
            <top>800</top>
            <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
            <visible>String.IsEmpty(Window(Home).Property(SkinSplashStarted)) | Integer.IsEqual(Container(301).NumItems,0) | Container(301).IsUpdating</visible>
            <animation effect="fade" start="100" end="0" time="600" tween="quadratic">Hidden</animation>
            <include content="Defs_BusySpinner">
                <param name="label" value="$LOCALIZE[31349]..." />
            </include>
        </control>

    </controls>
</window>
