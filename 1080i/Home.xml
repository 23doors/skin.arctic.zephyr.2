<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="0">
    <defaultcontrol always="true">300</defaultcontrol>
    
    <onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=300&amp;mode=single&amp;group=mainmenu|powermenu)</onload>
    <onload condition="!Skin.HasSetting(SkinHelper.EnablePVRThumbs)">Skin.SetBool(SkinHelper.EnablePVRThumbs)</onload>
    <onload condition="!Skin.HasSetting(SkinHelper.EnableMusicArt)">Skin.SetBool(SkinHelper.EnableMusicArt)</onload>
    <onload>ClearProperty(HomeFocus,Home)</onload>

    <onload>AlarmClock(SkinSplashStarted,SetProperty(SkinSplashStarted,1,home),00:01,silent,false)</onload>

    <onload>ClearProperty(WidgetLoading,Home)</onload>
    <onload>AlarmClock(SetLoad,SetProperty(WidgetLoading,1,Home),00:00,silent)</onload>

    <onunload>ClearProperty(SkinHelper.WidgetContainer)</onunload>

    <controls>
        <control type="list" id="9988">
            <description>hidden container for playlist background</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <visible>true</visible>
            <onup>50</onup>
            <ondown>50</ondown>
            <onleft>50</onleft>
            <onright>50</onright>
            <autoscroll time="10000">true</autoscroll>
            <itemlayout width="1" height="1">
            </itemlayout>
            <focusedlayout height="1" width="1">
            </focusedlayout>
            <content>$INFO[Container(300).ListItem.Property(backgroundPlaylist)]</content>
        </control>

        <control type="list" id="302">
            <onup>430</onup>
            <onback>300</onback>
            <ondown>300</ondown>
            <orientation>horizontal</orientation>
            <height>10</height>
            <top>-1000</top>
            <onfocus>ClearProperty(WidgetFocus,Home)</onfocus>
            <itemlayout width="10" />
            <focusedlayout width="10" />
            <content><include>skinshortcuts-submenu</include></content>
            <visible>Skin.HasSetting(HideSubmenuWidget)</visible>
        </control>
        <control type="list" id="300">
            <ondown>5600</ondown>
            <onfocus>ClearProperty(WidgetFocus,Home)</onfocus>
            <onfocus>ClearProperty(WidgetLoading,Home)</onfocus>
            <onfocus>AlarmClock(SetLoad,SetProperty(WidgetLoading,1,Home),00:00,silent)</onfocus>
            <orientation>horizontal</orientation>
            <height>10</height>
            <top>-1000</top>
            <itemlayout width="10" />
            <focusedlayout width="10" />
            <content><include>skinshortcuts-mainmenu</include></content>
        </control>


        <control type="image">
            <width>1920</width>
            <height>1080</height>
            <aspectratio>scale</aspectratio>
            <fadetime>600</fadetime>
            <texture background="true">$INFO[Container(5610).ListItem.Art(fanart)]</texture>
        </control>
        <control type="wraplist" id="5600">
            <animation effect="fade" start="100" end="0" time="500" condition="!Control.HasFocus(5600) + !Control.HasFocus(300)">Conditional</animation>
            <height>1080</height>
            <width>1920</width>
            <onfocus>SetProperty(SkinHelper.WidgetContainer,5600,Home)</onfocus>
            <onup>300</onup>
            <ondown>5610</ondown>
            <onback>300</onback>
            <autoscroll time="7000">!Control.HasFocus(5600) + System.IdleTime(1)</autoscroll>
            <orientation>horizontal</orientation>
            <itemlayout width="1920" height="1080">
                <control type="image">
                    <aspectratio>scale</aspectratio>
                    <texture colordiffuse="main_fg_100">common/geometric1.jpg</texture>
                </control>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
                </control>
            </itemlayout>
            <focusedlayout width="1920" height="1080">
                <control type="image">
                    <aspectratio>scale</aspectratio>
                    <texture colordiffuse="main_fg_100">common/geometric1.jpg</texture>
                </control>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>0</top>
                    <width>1920</width>
                    <height>1080</height>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
                </control>
            </focusedlayout>
            <content limit="50" sortby="random" target="videos">videodb://movies/titles/</content>
        </control>

        <control type="group">
            <animation effect="slide" start="0" end="0,-1080" time="200" condition="[!Control.HasFocus(5600) + !Control.HasFocus(300)] | Window.IsVisible(DialogVideoInfo.xml)">Conditional</animation>
            <animation effect="slide" start="0" end="0,-900" time="200">WindowClose</animation>
            <height>2160</height>
            <orientation>vertical</orientation>
            <itemgap>0</itemgap>
            <usecontrolcoords>true</usecontrolcoords>
            <control type="group">
                <height>1080</height>
                <width>1920</width>
                <control type="group">
                    <animation effect="slide" start="0" end="0,260" time="200" condition="Control.HasFocus(300)">Conditional</animation>
                    <control type="image">
                        <top>640</top>
                        <height>1720</height>
                        <texture colordiffuse="Background">common/bg.jpg</texture>
                    </control>
                    <!-- Topbar -->
                    <control type="group">
                        <top>640</top>
                        <animation effect="fade" start="100" end="0" time="200" condition="!Control.HasFocus(300)">Conditional</animation>
                        <include>Topbar_Home_TextButtons</include>
                        <control type="group">
                            <top>30</top>
                            <height>view_pad</height>
                            <visible allowhiddenfocus="true">!$EXP[Exp_HideFurniture]</visible>
                            <include>Animation_FadeInOut</include>
                            <include>Topbar_Right</include>
                        </control>
                    </control>

                    <control type="group">
                        <animation effect="fade" start="100" end="0" time="200" condition="Control.HasFocus(300)">Conditional</animation>
                        <!-- <control type="image">
                            <centertop>675</centertop>
                            <centerleft>50%</centerleft>
                            <width>32</width>
                            <height>32</height>
                            <texture flipy="true" colordiffuse="main_fg_100">buttons/spin-down.png</texture>
                            <visible>Control.HasFocus(5600)</visible>
                        </control> -->
                        <control type="grouplist">
                            <top>710</top>
                            <bottom>0</bottom>
                            <left>400</left>
                            <right>400</right>
                            <orientation>vertical</orientation>
                            <itemgap>10</itemgap>
                            <usecontrolcoords>true</usecontrolcoords>
                            <control type="label">
                                <align>center</align>
                                <font>font_byline</font>
                                <textcolor>main_fg_70</textcolor>
                                <label>Random Movies</label>
                                <height>30</height>
                            </control>
                            <control type="label">
                                <top>30</top>
                                <aligny>top</aligny>
                                <align>center</align>
                                <font>font_title</font>
                                <textcolor>main_fg_100</textcolor>
                                <label>$INFO[Container(5600).ListItem.Label,[B],[/B]]</label>
                                <height>80</height>
                            </control>
                            <control type="label">
                                <align>center</align>
                                <aligny>top</aligny>
                                <font>font_tiny</font>
                                <textcolor>main_fg_70</textcolor>
                                <label>$INFO[Container(5600).ListItem.Genre]</label>
                                <height>60</height>
                            </control>
                            <include content="Object_Icon_Ratings">
                                <param name="id" value="5600" />
                            </include>
                            <control type="image">
                                <top>0</top>
                                <centerleft>50%</centerleft>
                                <width>32</width>
                                <height>32</height>
                                <texture flipy="false" colordiffuse="main_fg_100">buttons/spin-down.png</texture>
                                <visible>Control.HasFocus(5600)</visible>
                            </control>
                        </control>
                    </control>
                </control>
            </control>
            <control type="group">
                <top>1080</top>
                <height>1080</height>
                <width>1920</width>
                <include>Topbar</include>
                <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(5610)">Conditional</animation>
                <control type="image">
                    <centertop>40</centertop>
                    <centerleft>50%</centerleft>
                    <width>32</width>
                    <height>32</height>
                    <texture flipy="true" colordiffuse="main_fg_100">buttons/spin-down.png</texture>
                    <include>Defs_InfoDialog_Visible</include>
                </control>
                <!-- <control type="image">
                    <centerbottom>40</centerbottom>
                    <centerleft>50%</centerleft>
                    <width>32</width>
                    <height>32</height>
                    <texture flipy="false" colordiffuse="main_fg_100">buttons/spin-down.png</texture>
                </control> -->
                <control type="group">
                    <top>view_top</top>
                    <left>view_pad</left>
                    <right>view_pad</right>
                    <include>Animation_Down</include>
                    <animation effect="fade" condition="!Control.HasFocus(5610)" time="0" start="100" end="0">Conditional</animation>
                    <include>Defs_InfoDialog_Visible</include>
                    <control type="grouplist">
                        <top>0</top>
                        <left>400</left>
                        <right>400</right>
                        <orientation>vertical</orientation>
                        <itemgap>10</itemgap>
                        <usecontrolcoords>true</usecontrolcoords>
                        <control type="label">
                            <aligny>top</aligny>
                            <align>center</align>
                            <font>font_title</font>
                            <textcolor>main_fg_100</textcolor>
                            <label>$INFO[Container(5610).ListItem.Label,[B],[/B]]</label>
                            <height>80</height>
                        </control>
                        <control type="label">
                            <align>center</align>
                            <aligny>top</aligny>
                            <font>font_tiny</font>
                            <textcolor>main_fg_70</textcolor>
                            <label>$INFO[Container(5610).ListItem.Genre]</label>
                            <height>60</height>
                        </control>
                    </control>
                    <control type="panel" id="5610">
                        <top>168</top>
                        <height>412.5</height>
                        <right>-15</right>
                        <left>-15</left>
                        <onfocus>SetProperty(SkinHelper.WidgetContainer,5610,Home)</onfocus>
                        <onup>5600</onup>
                        <onback>300</onback>
                        <preloaditems>2</preloaditems>
                        <orientation>horizontal</orientation>
                        <itemlayout width="244.28" height="412.5">
                            <control type="group">
                                <height>345</height>
                                <control type="image">
                                    <bordersize>15</bordersize>
                                    <aspectratio>scale</aspectratio>
                                    <bordertexture border="30" colordiffuse="55ffffff">common/shadow-15.png</bordertexture>
                                    <texture colordiffuse="main_fg_100">common/geometric.png</texture>
                                </control>
                                <control type="image">
                                    <centertop>50%</centertop>
                                    <centerleft>50%</centerleft>
                                    <width>160</width>
                                    <height>160</height>
                                    <texture background="true">$INFO[ListItem.Icon]</texture>
                                    <visible>String.StartsWith(ListItem.Icon,Default)</visible>
                                </control>
                                <control type="image">
                                    <bordersize>15</bordersize>
                                    <aspectratio>scale</aspectratio>
                                    <texture background="true">$VAR[Image_Poster]</texture>
                                    <visible>!String.StartsWith(ListItem.Icon,Default)</visible>
                                </control>
                            </control>
                            <control type="label">
                                <left>15</left>
                                <right>15</right>
                                <font>font_statusbar</font>
                                <textcolor>main_fg_100</textcolor>
                                <top>345</top>
                                <bottom>30</bottom>
                                <aligny>center</aligny>
                                <align>center</align>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </itemlayout>
                        <focusedlayout width="244.28" height="412.5">
                            <control type="group">
                                <height>345</height>
                                <control type="image">
                                    <bordersize>15</bordersize>
                                    <aspectratio>scale</aspectratio>
                                    <bordertexture border="30" colordiffuse="55ffffff">common/shadow-15.png</bordertexture>
                                    <texture colordiffuse="main_fg_100">common/geometric.png</texture>
                                </control>
                                <control type="image">
                                    <centertop>50%</centertop>
                                    <centerleft>50%</centerleft>
                                    <width>160</width>
                                    <height>160</height>
                                    <texture background="true">$INFO[ListItem.Icon]</texture>
                                    <visible>String.StartsWith(ListItem.Icon,Default)</visible>
                                </control>
                                <control type="image">
                                    <bordersize>15</bordersize>
                                    <aspectratio>scale</aspectratio>
                                    <texture background="true">$VAR[Image_Poster]</texture>
                                    <visible>!String.StartsWith(ListItem.Icon,Default)</visible>
                                </control>
                                <include>View_Selectbox</include>
                            </control>
                            <control type="label">
                                <left>15</left>
                                <right>15</right>
                                <font>font_statusbar</font>
                                <textcolor>main_fg_100</textcolor>
                                <top>345</top>
                                <bottom>30</bottom>
                                <aligny>center</aligny>
                                <align>center</align>
                                <scroll>false</scroll>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                        </focusedlayout>
                        <content target="videos">videodb://recentlyaddedmovies/</content>
                    </control>

                    <control type="grouplist">
                        <orientation>vertical</orientation>
                        <top>600</top>
                        <itemgap>40</itemgap>
                        <usecontrolcoords>true</usecontrolcoords>
                        <control type="textbox">
                            <centerleft>50%</centerleft>
                            <width>1350</width>
                            <label fallback="19055">$VAR[Label_Plot]</label>
                            <height>120</height>
                            <aligny>top</aligny>
                            <align>center</align>
                            <textcolor>main_fg_70</textcolor>
                            <font>font_plotbox</font>
                        </control>
                        <include content="Object_Icon_Ratings">
                            <param name="id" value="5610" />
                        </include>
                    </control>
                    

                </control>
            </control>
        </control>



        

        <!-- Splash -->
        <control type="image" description="Background">
            <include>Dimensions_Fullscreen</include>
            <texture colordiffuse="ff000000">common/white.png</texture>
            <visible>String.IsEmpty(Window(Home).Property(SkinSplashStarted)) | Integer.IsEqual(Container(300).NumItems,0) | Container(300).IsUpdating</visible>
            <animation effect="fade" start="100" end="0" delay="600" time="600" tween="quadratic">Hidden</animation>
            <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
        </control>
        <control type="image" description="Background">
            <include>Dimensions_Fullscreen</include>
            <texture fallback="special://skin/fanart.jpg">$INFO[Skin.String(StartupSplash)]</texture>
            <visible>String.IsEmpty(Window(Home).Property(SkinSplashStarted)) | Integer.IsEqual(Container(300).NumItems,0) | Container(300).IsUpdating</visible>
            <animation effect="fade" start="100" end="0" time="600" tween="quadratic">Hidden</animation>
            <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
        </control>
        <control type="group">
            <top>800</top>
            <visible>String.IsEmpty(Skin.String(StartupPlaylist))</visible>
            <visible>String.IsEmpty(Window(Home).Property(SkinSplashStarted)) | Integer.IsEqual(Container(300).NumItems,0) | Container(300).IsUpdating</visible>
            <animation effect="fade" start="100" end="0" time="600" tween="quadratic">Hidden</animation>
            <include content="Defs_BusySpinner">
                <param name="label" value="$LOCALIZE[31348]..." />
            </include>
        </control>

    </controls>
</window>
