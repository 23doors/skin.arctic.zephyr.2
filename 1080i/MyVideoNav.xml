<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="6">
    <defaultcontrol always="true">50</defaultcontrol>
    <menucontrol>300</menucontrol>
    <views>50,59,500,51,510,511,52,520,521</views>
    <onload condition="System.HasAddon(script.tv.show.next.aired)">RunScript(script.tv.show.next.aired,backend=True)</onload>
    <controls>
        <include>Global_Background</include>
        <include>Topbar</include>
        <include>Object_NowPlaying</include>

        <control type="list" id="300">
            <visible allowhiddenfocus="true">Control.HasFocus(300)</visible>
            <ondown>50</ondown>
            <include>Topbar_Menu_Layout</include>
            <include>Items_View</include>
        </control>


        <!-- <include>Object_Codecs</include> -->

        
        <control type="group">
            <include>View_50_List</include>
            <include>View_500_List_Square</include>
            <include>View_51_Wall</include>
            <include>View_510_Wall_Square</include>
            <include>View_511_Wall_Landscape</include>
            <include>View_52_Showcase</include>
            <include>View_520_Showcase_Square</include>
            <include>View_521_Showcase_Landscape</include>


            <control type="group">
                <visible>Control.IsVisible(59)</visible>
                <include>Defs_InfoDialog_Visible</include>
                <include>Animation_Common</include>
                <control type="grouplist">
                    <left>700</left>
                    <top>200</top>
                    <right>view_pad</right>
                    <orientation>vertical</orientation>
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>0</itemgap>
                    <include>Object_Info_Title</include>
                    <include>Object_Info_Line</include>
                </control>
                <control type="textbox">
                    <left>700</left>
                    <top>817</top>
                    <right>view_pad</right>
                    <label fallback="19055">$INFO[ListItem.PlotOutline]</label>
                    <height>120</height>
                    <aligny>center</aligny>
                    <textcolor>main_fg_70</textcolor>
                    <font>font_plotbox</font>
                </control>
                <control type="wraplist" id="59">
                    <orientation>horizontal</orientation>
                    <left>-91</left>
                    <width>2500</width>
                    <top>view_top</top>
                    <focusposition>1</focusposition>
                    <preloaditems>0</preloaditems>
                    <scrolltime tween="quadratic">400</scrolltime>
                    <itemlayout width="318">
                        <control type="group">
                            <width>560</width>
                            <height>810</height>
                            <centerleft>50%</centerleft>
                            <animation effect="Conditional" condition="true">
                                <effect type="zoom" end="53" time="0" center="auto" />
                            </animation>
                            <include content="View_50_Poster">
                                <param name="left" value="0" />
                                <param name="height" value="810" />
                                <param name="width" value="560" />
                            </include>
                        </control>
                    </itemlayout>
                    <focusedlayout width="318">
                        <control type="group">
                            <animation condition="Container(59).OnNext | Container(59).OnPrevious" effect="zoom" start="53" end="100" delay="0" time="350" tween="sine" easing="out" center="auto">Focus</animation>
                            <animation condition="Container(59).OnNext | Container(59).OnPrevious" effect="zoom" start="100" end="53" delay="0" time="250" tween="sine" easing="out" center="auto">UnFocus</animation>
                            <width>560</width>
                            <height>810</height>
                            <centerleft>50%</centerleft>
                            <include content="View_50_Poster">
                                <param name="left" value="0" />
                                <param name="height" value="810" />
                                <param name="width" value="560" />
                            </include>
                        </control>
                    </focusedlayout>
                </control>
            </control>


            <include content="Object_Scrollbar_Vert">
                <param name="visible" value="Control.IsVisible(50) | Control.IsVisible(500) | Control.IsVisible(51) | Control.IsVisible(510) | Control.IsVisible(511)" />
            </include>
            <include content="Object_Scrollbar_Horz">
                <param name="visible" value="Control.IsVisible(52) | Control.IsVisible(520) | Control.IsVisible(521)" />
            </include>
        </control>


        <include>Object_PlotOverlay</include>
       
        <!-- Hidden Buttons -->
        <include>Defs_Options_StandardButtons</include>
        <control type="button" id="8">
            <label>137</label>
            <include>Defs_Hidden_Button</include>
        </control>
        <control type="togglebutton" id="14">
            <label>$LOCALIZE[20367]: $LOCALIZE[16039]</label>
            <altlabel>$LOCALIZE[20367]: $LOCALIZE[16041]</altlabel>
            <usealttexture>System.Setting(hidewatched)</usealttexture>
            <description>Watched Unwatched</description>
            <include>Defs_Hidden_Button</include>
        </control>
        <control type="button" id="20">
            <description>Library</description>
            <label>653</label>
            <include>Defs_Hidden_Button</include>
        </control>
        <control type="button" id="6005">
            <description>Extra fanart</description>
            <label>$VAR[Label_ExtraFanart]</label>
            <onclick>Skin.ToggleSetting(SkinHelper.EnableExtraFanart)</onclick>
            <include>Defs_Hidden_Button</include>
        </control>
    </controls>
</window>
