                            <aspectratio>scale</aspectratio>
                            <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
                        </control>
                    </focusedlayout>
                    <content limit="10" sortby="random">$INFO[Container.FolderPath]</content>
                </control>
            </control>
            <control type="panel" id="50">
                <left>-15</left>
                <top>-15</top>
                <height>930</height>
