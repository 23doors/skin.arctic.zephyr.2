<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="34">
    <defaultcontrol always="true">300</defaultcontrol>
    <include>Defs_Settings_OnLoad</include>
    <controls>

        <include>Global_Background</include>
        <include>Topbar</include>
        <control type="image">
            <include>Dimensions_Fullscreen</include>
            <texture border="2">common/black-back.png</texture>
        </control>
        <control type="group">
            <include content="Dialog_Standard_Group">
                <param name="width" value="1820" />
                <param name="height" value="980" />
                <param name="animation" value="false" />
            </include>

            <control type="label">
                <label>$INFO[Container(300).ListItem.Label]</label>
                <include>Dialog_Standard_Header</include>
            </control>
    
            <include content="Defs_Settings_Changer">
                <onright>4</onright>
            </include>

            <include content="Dialog_Separator">
                <param name="left" value="view_list_height" />
            </include>

            <control type="group">
                <left>view_list_height</left>

                <control type="radiobutton" id="4">
                    <description>button area</description>
                    <left>0</left>
                    <top>dialog_top</top>
                    <width>dialog_side_grouplist</width>
                    <itemgap>0</itemgap>
                    <onright>2</onright>
                    <include>Defs_Settings_OnLeft</include>
                    <label>20096</label>
                    <radioposx>350</radioposx>
                    <include>Defs_Settings_Button</include>
                </control>

                <include>Dialog_Separator</include>

                <control type="panel" id="2">
                    <description>control area</description>
                    <left>dialog_side_grouplist</left>
                    <top>dialog_top</top>
                    <right>0</right>
                    <height>780</height>
                    <onleft>4</onleft>
                    <include>Defs_Settings_OnRight</include>
                    <onright>Down</onright>
                    <onright>AlarmClock(set,SetFocus(5),00:00,silent)</onright>
                    <itemlayout height="80" width="1430">
                        <control type="label">
                            <right>view_pad</right>
                            <left>50</left>
                            <textcolor>dialog_fg_70</textcolor>
                            <info>ListItem.Label</info>
                        </control>
                        <control type="label">
                            <right>view_pad</right>
                            <left>50</left>
                            <align>right</align>
                            <font>font_tiny</font>
                            <textcolor>dialog_fg_70</textcolor>
                            <info>ListItem.Label2</info>
                        </control>
                    </itemlayout>

                    <focusedlayout height="80" width="1430">
                        <control type="group">
                            <control type="image">
                                <width>100%</width>
                                <texture border="5" colordiffuse="$VAR[ColorHighlight]">common/white.png</texture>
                            </control>
                            <control type="label">
                                <left>50</left>
                                <right>view_pad</right>
                                <textcolor>Selected</textcolor>
                                <info>ListItem.Label</info>
                            </control>
                            <control type="label">
                                <right>view_pad</right>
                                <left>50</left>
                                <align>right</align>
                                <font>font_tiny</font>
                                <textcolor>Selected</textcolor>
                                <info>ListItem.Label2</info>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>
        
    </controls>

</window>
