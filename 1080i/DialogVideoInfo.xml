            <!-- Center | Information -->
            <control type="group">
                <width>1920</width>
                <height>1080</height>
                <control type="group">
                    <include>View_Pad</include>
                    <control type="grouplist" id="8100">
                        <orientation>vertical</orientation>
                        <itemgap>825</itemgap>
                        <top>-15</top>
                        <left>-15</left>
                        <right>-15</right>
                        <height>825</height>
                        <control type="group" id="8101">
                            <height>825</height>
                            <control type="button" id="8000">
                                <include>Defs_Hidden_Button</include>
                                <onup>300</onup>
                                <ondown>5101</ondown>
                                <onclick>SetFocus(300)</onclick>
                                <onleft>5005</onleft>
                                <onright condition="Control.IsVisible(50)">SetFocus(50,0,absolute)</onright>
                                <onright condition="Control.IsVisible(5050) + Integer.IsGreater(Container(5050).NumItems,0) + !Container.IsUpdating(5050)">SetFocus(5050,0,absolute)</onright>
                            </control>
                            <control type="group">
                                <top>15</top>
                                <left>15</left>
                                <right>15</right>
                                <height>780</height>
                                <!-- Poster -->
                                <include content="View_50_Poster">
                                    <param name="include" value="Animation_Left_Delay" />
                                    <param name="visible" value="true" />
                                </include>

                                <!-- Info -->
                                <control type="group">
                                    <top>-15</top>
                                    <left>580</left>
                                    <include>Animation_Right_Delay</include>
                                    <control type="grouplist">
                                        <orientation>vertical</orientation>
                                        <usecontrolcoords>true</usecontrolcoords>
                                        <itemgap>0</itemgap>
                                        <include>Object_Info_Title</include>
                                        <include>Object_Info_Line</include>
                                        <include>Object_Info_Plot</include>
                                        <include>Object_Info_Ratings</include>
                                        <include>Object_Info_Details</include>
                                    </control>

                                    <control type="grouplist">
                                        <align>bottom</align>
                                        <orientation>vertical</orientation>
                                        <usecontrolcoords>true</usecontrolcoords>
                                        <itemgap>0</itemgap>
                                        <include>Object_Info_Codecs</include>
                                    </control>
                                    <!-- <include>Object_Info_Buttons</include> -->
                                </control>
                            </control>
                        </control>
                        <control type="grouplist" id="5100">
                            <height>825</height>
                            <orientation>vertical</orientation>
                            <itemgap>0</itemgap>
                            <include content="View_51_Wall_Container">
                                <param name="id" value="5101" />
                                <param name="height" value="412.5" />
                                <param name="controlorientation" value="View_Horizontal_Back" />
                                <param name="onleft" value="5101" />
                                <param name="onright" value="5101" />
                                <param name="visible" value="Integer.IsGreater(Container(5101).NumItems,1) | Container(5101).IsUpdating" />
                                <content>
                                    <item>
                                        <label>$INFO[ListItem.Set]</label>
                                        <icon>DefaultSets.png</icon>
                                        <onclick>Close</onclick>
                                        <onclick>Close</onclick>
                                        <onclick>ActivateWindow(videos,$INFO[ListItem.SetID,videodb://movies/sets/,/],return)</onclick>
                                    </item>
                                </content>
                                <content limit="6" target="videos">$INFO[ListItem.SetID,videodb://movies/sets/,/]</content>
                            </include>
                            <include content="View_51_Wall_Container">
                                <param name="id" value="5102" />
                                <param name="height" value="412.5" />
                                <param name="controlorientation" value="View_Horizontal_Back" />
                                <param name="onleft" value="5102" />
                                <param name="onright" value="5102" />
                                <param name="visible" value="Integer.IsGreater(Container(5102).NumItems,1) | Container(5102).IsUpdating" />
                                <content>
                                    <item>
                                        <label>Similar Movies</label>
                                        <icon>DefaultTags.png</icon>
                                        <onclick>Close</onclick>
                                        <onclick>Close</onclick>
                                        <onclick>ActivateWindow(videos,$INFO[ListItem.IMDBNumber,plugin://script.skin.helper.widgets/?action=similar&amp;mediatype=movies&amp;imdbid=,],return)</onclick>
                                    </item>
                                </content>
                                <content limit="6" target="videos">$INFO[ListItem.IMDBNumber,plugin://script.skin.helper.widgets/?action=similar&amp;mediatype=movies&amp;imdbid=,]</content>
                            </include>
                            <include content="View_51_Wall_Container">
                                <param name="id" value="5103" />
                                <param name="height" value="412.5" />
                                <param name="controlorientation" value="View_Horizontal_Back" />
                                <param name="onleft" value="5103" />
                                <param name="onright" value="5103" />
                                <param name="visible" value="Integer.IsGreater(Container(5103).NumItems,1) | Container(5103).IsUpdating" />
                                <content>
                                    <item>
                                        <label>$INFO[ListItem.Director,By ,]</label>
                                        <icon>DefaultDirector.png</icon>
                                        <onclick>SendClick(13)</onclick>
                                    </item>
                                </content>
                                <content limit="6" target="videos">$INFO[ListItem.Director,plugin://script.extendedinfo?info=personmovies&amp;&amp;person=,]</content>
                            </include>
                            <include content="View_51_Wall_Container">
                                <param name="id" value="5104" />
                                <param name="height" value="412.5" />
                                <param name="controlorientation" value="View_Horizontal_Back" />
                                <param name="onleft" value="5104" />
                                <param name="onright" value="5104" />
                                <param name="visible" value="Integer.IsGreater(Container(5104).NumItems,1) | Container(5104).IsUpdating" />
                                <content>
                                    <item>
                                        <label>$INFO[ListItem.Studio]</label>
                                        <onclick>Close</onclick>
                                        <onclick>Close</onclick>
                                        <onclick>ActivateWindow(videos,$INFO[ListItem.Studio,plugin://script.extendedinfo?info=studio&amp;&amp;studio=,],return)</onclick>
                                        <icon>DefaultStudios.png</icon>
                                    </item>
                                </content>
                                <content limit="6" target="videos">$INFO[ListItem.Studio,plugin://script.extendedinfo?info=studio&amp;&amp;studio=,]</content>
                            </include>
                            <control type="group" description="StopScrolling">
                            </control>
                        </control>
                    </control>
                </control>
            </control>

            <!-- Right | Cast -->
            <control type="group">
                <left>1920</left>
                <width>1920</width>
                <height>1080</height>
                <include content="View_51_Wall_Control">
                    <param name="id" value="50" />
                    <param name="height" value="825" />
                    <param name="visible" value="!Integer.IsGreater(Container(5050).NumItems,0) | Container(5050).IsUpdating" />
                    <param name="infohide" value="false" />
                    <param name="animation" value="Animation_Info_Fade_Delay" />
                    <param name="labelinclude" value="View_Cast_Label" />
                    <param name="controlorientation" value="View_Vertical_Cast" />
                </include>
                <include content="View_51_Wall_Control">
                    <param name="id" value="5050" />
                    <param name="height" value="825" />
                    <param name="visible" value="true" />
                    <param name="infohide" value="false" />
                    <param name="animation" value="Animation_Info_Fade_Delay" />
                    <param name="labelinclude" value="View_Cast_Label" />
                    <param name="includecontent" value="true" />
                    <param name="content" value="$VAR[Defs_Cast_Content]" />
                    <param name="controlorientation" value="View_Vertical_Cast" />
                    <animation effect="fade" condition="!Integer.IsGreater(Container(5050).NumItems,0) | Container(5050).IsUpdating" start="100" end="0" time="1">Conditional</animation>
                </include>
            </control>
        </control>
            
        <control type="group">
            <visible>!Window.IsVisible(DialogNotification.xml)</visible>
            <visible>!Window.IsVisible(DialogExtendedProgressBar.xml)</visible>
            <control type="grouplist">
                <visible>[Container(9000).HasPrevious + ControlGroup(9000).HasFocus()] | [Control.HasFocus(8000) + !String.IsEmpty(ListItem.Art(fanart))] | Control.HasFocus(50) | Control.HasFocus(5050)</visible>
                <orientation>horizontal</orientation>
                <align>left</align>
                <bottom>0</bottom>
                <left>view_pad</left>
                <right>view_pad</right>
                <height>view_pad</height>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>20</itemgap>
                <control type="image">
                    <centertop>50%</centertop>
                    <width>24</width>
                    <height>24</height>
                    <texture colordiffuse="main_fg_90" flipx="false">buttons/spin-left.png</texture>
                </control>
                <control type="label">
                    <aligny>center</aligny>
                    <align>left</align>
                    <width>auto</width>
                    <font>font_statusbar</font>
                    <textcolor>main_fg_70</textcolor>
                    <label>$VAR[Label_Info_LeftHint]</label>
                </control>
            </control>
            <control type="group">
                <bottom>0</bottom>
                <height>view_pad</height>
                <visible>Control.HasFocus(8000)</visible>
                <control type="label">
                    <aligny>center</aligny>
                    <align>center</align>
                    <width>auto</width>
                    <font>font_statusbar</font>
                    <textcolor>main_fg_70</textcolor>
                    <!-- <label>$LOCALIZE[31413]</label> -->
                    <label>Explore</label>
                    <include>Animation_FadeIn</include>
                </control>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <centerbottom>25%</centerbottom>
                    <width>24</width>
                    <height>24</height>
                    <texture colordiffuse="main_fg_90">buttons/spin-down.png</texture>
                </control>
            </control>
            <control type="grouplist">
                <visible>ControlGroup(9000).HasFocus() | [Control.HasFocus(8000) + [Control.IsVisible(50) | Control.IsVisible(5050)]]</visible>
                <orientation>horizontal</orientation>
                <align>right</align>
                <bottom>0</bottom>
                <left>view_pad</left>
                <right>view_pad</right>
                <height>view_pad</height>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>20</itemgap>
                <control type="label">
                    <aligny>center</aligny>
                    <align>right</align>
                    <width>auto</width>
                    <font>font_statusbar</font>
                    <textcolor>main_fg_70</textcolor>
                    <label>$VAR[Label_Info_RightHint]</label>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <width>24</width>
                    <height>24</height>
                    <texture colordiffuse="main_fg_90" flipx="true">buttons/spin-left.png</texture>
                </control>
            </control>
        </control>

        
        <!-- Hidden Buttons -->
        <control type="button" id ="6">
            <description>Refresh</description>
            <label>184</label>
            <include>Defs_Hidden_Button</include>
        </control>

        <control type="button" id ="7">
            <description>Userrating</description>
            <include>Defs_Hidden_Button</include>
        </control>

        <control type="button" id ="8">
            <description>Play</description>
