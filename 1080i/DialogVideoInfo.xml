                <control type="group">
                    <include>Animation_Info_Fade_Delay</include>
                    <visible>!String.IsEmpty(ListItem.Art(discart))</visible>
                    <width>1920</width>
                    <height>1080</height>
                    <control type="button" id="5006">
                        <include>Defs_Hidden_Button</include>
                        <onleft>5005</onleft>
                        <onback>SetFocus(5000)</onback>
                        <onback>8000</onback>
                    </control>
                    <control type="group">
                        <include>View_Pad</include>
                        <control type="image">
                            <texture background="true">$INFO[ListItem.Art(discart)]</texture>
                            <aspectratio align="left">keep</aspectratio>
                        </control>
                        <control type="grouplist">
                            <orientation>vertical</orientation>
                            <itemgap>40</itemgap>
                            <width>700</width>
                            <right>0</right>
                            <align>center</align>
                            <control type="textbox">
                                <right>0</right>
                                <width>700</width>
                                <height>350</height>
                                <align>right</align>
