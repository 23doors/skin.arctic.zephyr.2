                <itemgap>20</itemgap>
                <control type="label">
                    <aligny>center</aligny>
                    <align>right</align>
                    <width>auto</width>
                    <font>font_info_buttons</font>
                    <textcolor>main_fg_70</textcolor>
                    <label>$VAR[Label_Info_RightHint]</label>
                </control>
                <control type="image">
                    <centertop>50%</centertop>
                    <width>24</width>
                    <height>24</height>
                    <texture colordiffuse="main_fg_90" flipx="true">buttons/spin-left.png</texture>
                </control>
            </control>
        </control>

    </controls>
</window>
