        <control type="group">
            <visible>ControlGroup(5100).HasFocus() | ControlGroup(9000).HasFocus() | Control.HasFocus(50) | Control.HasFocus(5050)</visible>
            <visible>!Window.IsVisible(DialogNotification.xml)</visible>
            <visible>!Window.IsVisible(DialogExtendedProgressBar.xml)</visible>
            <animation effect="fade" start="0" end="100" time="300" tween="cubic" easing="inout" reversible="false" delay="0">Visible</animation>
            <control type="grouplist">
                <visible>ControlGroup(9000).HasFocus()</visible>
                <orientation>horizontal</orientation>
                <align>left</align>
                <bottom>0</bottom>
                <left>view_pad</left>
                <right>view_pad</right>
                <height>view_pad</height>
                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>20</itemgap>
                <control type="image">
                    <centertop>50%</centertop>
                    <width>24</width>
                    <height>24</height>
                    <texture colordiffuse="main_fg_90" flipx="false">buttons/spin-left.png</texture>
                </control>
                <control type="label">
                    <aligny>center</aligny>
                    <align>left</align>
                    <width>auto</width>
                    <font>font_info_buttons</font>
                    <textcolor>main_fg_70</textcolor>
                    <label>$VAR[Label_Info_LeftHint]</label>
                </control>
            </control>
            <control type="grouplist">
                <visible>[Container(9000).HasNext + ControlGroup(9000).HasFocus()] | Control.HasFocus(50) | Control.HasFocus(5050)</visible>
                <orientation>horizontal</orientation>
                <align>right</align>
                <bottom>0</bottom>
                <left>view_pad</left>
                <right>view_pad</right>
                <height>view_pad</height>
