    <controls>

        <control type="group">
            <animation effect="fade" end="0" start="100" time="300" tween="cubic" easing="inout" reversible="false" delay="0">Hidden</animation>
            <visible>!ControlGroup(5100).HasFocus() + !ControlGroup(9000).HasFocus() + !Control.HasFocus(50) + !Control.HasFocus(5050)</visible>
            <include content="Object_Codecs">
                <param name="infohide" value="false" />
            </include>
        </control>
        
        <control type="group">
            <animation effect="fade" condition="Window.IsVisible(Home.xml)" time="1" delay="350" start="0" end="100">WindowOpen</animation>
            <include content="Topbar">
                <param name="info_hide" value="false" />
            </include>
        </control>

        <!-- <control type="list" id="300">
            <ondown>8000</ondown>
            <include>Topbar_Menu_Layout</include>
            <include>Items_Info</include>
        </control> -->

        <control type="grouplist" id="300">
            <visible>![ControlGroup(5100).HasFocus() | ControlGroup(9000).HasFocus() | Control.HasFocus(50) | Control.HasFocus(5050)]</visible>
