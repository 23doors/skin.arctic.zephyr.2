<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2003">
    <defaultcontrol always="true">9000</defaultcontrol>
    <onload>ClearProperty(CurrentList)</onload>
    <onunload>ClearProperty(CurrentList)</onunload>
    <controls>

        <!-- Movie / TvShow Info -->
        <control type="group">
            <visible>![String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)]</visible>
            <include>View_Pad</include>
            <!-- Poster -->
            <include content="View_50_Poster">
                <param name="height" value="810" />
                <param name="width" value="560" />
                <param name="include" value="Animation_Left_Delay" />
                <param name="visible" value="String.IsEmpty(Window.Property(CurrentList))" />
            </include>

            <!-- Info -->
            <control type="group">
                <top>-15</top>
                <left>575</left>
                <right>0</right>
                <visible>String.IsEmpty(Window.Property(CurrentList))</visible>
                <include>Animation_Right_Delay</include>
                <control type="grouplist">
                    <orientation>vertical</orientation>
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>0</itemgap>
                    <include>Object_Info_Title</include>
                    <include>Object_Info_Line</include>
                    <include>Object_Info_Plot</include>
                    <include>Object_Info_Ratings</include>
                    <include>Object_Info_Details</include>
                    <include>Object_Info_Codecs</include>
                </control>
                <include>Object_Info_Buttons</include>
            </control>
        </control>

        <!-- Episode / Video Info -->
        <control type="group">
            <visible>String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)</visible>
            <include>View_Pad</include>

            <!-- Thumb and Banner -->
            <control type="group">
                <right>-15</right>
                <width>870</width>
                <include>Animation_Right_Delay</include>
                <control type="group">
                    <top>-15</top>
                    <height>502.5</height>
                    <include>Object_Geometric</include>
                    <include>Object_DefaultIcon</include>
                    <include content="Object_Poster">
                        <param name="icon" value="$VAR[Image_Fanart]" />
                    </include>
                </control>
                <control type="group">
                    <top>487</top>
                    <height>187</height>
                    <include>Object_Geometric</include>
                    <include content="Object_Poster">
                        <param name="icon" value="$VAR[Image_Fanart]" />
                    </include>
                    <control type="image">
                        <bordersize>25</bordersize>
                        <aspectratio align="right">keep</aspectratio>
                        <texture background="true">$VAR[Image_ClearLogo]</texture>
                    </control>
                    <include content="Object_Poster">
                        <param name="icon" value="$VAR[Image_Banner]" />
                    </include>
                </control>
            </control>

            <include>Object_Info_Buttons</include>

            <!-- Info -->
            <control type="group">
                <top>-15</top>
                <right>870</right>
                <include>Animation_Left_Delay</include>
                <control type="grouplist">
                    <orientation>vertical</orientation>
                    <usecontrolcoords>true</usecontrolcoords>
                    <itemgap>0</itemgap>
                    <include>Object_Info_Title</include>
                    <include>Object_Info_Line</include>
                    <include>Object_Info_Plot</include>
                    <include>Object_Info_Ratings</include>
                    <include>Object_Info_Details</include>
                    <include>Object_Info_Codecs</include>
                </control>
            </control>            
        </control>

        <include content="View_51_Wall_Control">
            <param name="id" value="50" />
            <param name="height" value="412.5" />
            <param name="controlorientation" value="View_Horizontal_Cast" />
            <param name="controltype" value="fixedlist" />
            <param name="controllayout" value="View_52_Showcase_Layout" />
            <param name="infohide" value="false" />
            <param name="visible" value="!String.IsEmpty(Window.Property(CurrentList)) + String.IsEqual(Window.Property(CurrentList),$NUMBER[50])" />
            <param name="include" value="Object_Info_Cast_Details" />
            <param name="onfocus" value="SetProperty(CurrentList,50)" />
        </include>


        <control type="group">
            <visible>!String.IsEmpty(Window.Property(CurrentList)) + String.IsEqual(Window.Property(CurrentList),$NUMBER[7000])</visible>
            <include>Animation_Common</include>
            <control type="grouplist">
                <include>View_Pad</include>
                <orientation>horizontal</orientation>
                <itemgap>0</itemgap>
                <pagecontrol>7000</pagecontrol>
                <control type="image">
                    <width>1680</width>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart)]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(fanart))</visible>
                </control>
                <control type="image">
                    <width>1680</width>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart1)]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(fanart1))</visible>
                </control>
                <control type="image">
                    <width>1680</width>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart2)]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(fanart2))</visible>
                </control>
                <control type="image">
                    <width>1680</width>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart3)]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(fanart3))</visible>
                </control>
                <control type="image">
                    <width>1680</width>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart4)]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(fanart4))</visible>
                </control>
                <control type="image">
                    <width>1680</width>
                    <aspectratio>scale</aspectratio>
                    <texture background="true">$INFO[ListItem.Art(fanart5)]</texture>
                    <visible>!String.IsEmpty(ListItem.Art(fanart5))</visible>
                </control>
            </control>
            <control type="image">
                <include>View_Pad</include>
                <texture border="20">common/selectbox.png</texture>
            </control>
        </control>
        <control type="scrollbar" id="7000">
            <onback>50</onback>
            <height>8</height>
            <left>0</left>
            <right>0</right>
            <width>100%</width>
            <bottom>-10</bottom>
            <showonepage>false</showonepage>
            <orientation>horizontal</orientation>
            <onup>6000</onup>
            <texturesliderbackground colordiffuse="main_fg_12" border="4">common/white.png</texturesliderbackground>
            <texturesliderbar colordiffuse="main_fg_30" border="4">scrollbar/scrollv.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="$VAR[ColorHighlight]" border="4">scrollbar/scrollv.png</texturesliderbarfocus>
            <animation effect="fade" start="100" end="33" time="400" condition="!Control.HasFocus(7000) + !Container.Scrolling">Conditional</animation>
            <visible>!Window.IsVisible(home)</visible>
            <include>Animation_FadeIn</include>
            <include>Animation_FadeOut</include>
        </control>

    </controls>

</window>
