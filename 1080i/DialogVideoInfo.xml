<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2003">
    <defaultcontrol always="true">8000</defaultcontrol>
    <controls>

        <control type="grouplist" id="9000">
            <orientation>horizontal</orientation>
            <itemgap>0</itemgap>

            <!-- Artwork -->
            <include content="Object_Info_Artwork">
                <param name="id" value="5000" />
                <param name="onleft" value="noop" />
                <param name="onright" value="5001" />
                <param name="artwork" value="$INFO[ListItem.Art(fanart5)]" />
                <param name="visible" value="!String.IsEmpty(ListItem.Art(fanart5))" />
            </include>
            <include content="Object_Info_Artwork">
                <param name="id" value="5001" />
                <param name="onleft" value="5000" />
                <param name="onright" value="5002" />
                <param name="artwork" value="$INFO[ListItem.Art(fanart4)]" />
                <param name="visible" value="!String.IsEmpty(ListItem.Art(fanart4))" />
            </include>
            <include content="Object_Info_Artwork">
                <param name="id" value="5002" />
                <param name="onleft" value="5001" />
                <param name="onright" value="5003" />
                <param name="artwork" value="$INFO[ListItem.Art(fanart3)]" />
                <param name="visible" value="!String.IsEmpty(ListItem.Art(fanart3))" />
            </include>
            <include content="Object_Info_Artwork">
                <param name="id" value="5003" />
                <param name="onleft" value="5002" />
                <param name="onright" value="5004" />
                <param name="artwork" value="$INFO[ListItem.Art(fanart2)]" />
                <param name="visible" value="!String.IsEmpty(ListItem.Art(fanart2))" />
            </include>
            <include content="Object_Info_Artwork">
                <param name="id" value="5004" />
                <param name="onleft" value="5003" />
                <param name="onright" value="5005" />
                <param name="artwork" value="$INFO[ListItem.Art(fanart1)]" />
                <param name="visible" value="!String.IsEmpty(ListItem.Art(fanart1))" />
            </include>
            <include content="Object_Info_Artwork">
                <param name="id" value="5005" />
                <param name="onleft" value="5004" />
                <param name="onright" value="8000" />
                <param name="artwork" value="$INFO[ListItem.Art(fanart)]" />
                <param name="visible" value="!String.IsEmpty(ListItem.Art(fanart))" />
            </include>
            
            
            <!-- Movie / TvShow Info -->
            <control type="group">
                <width>1920</width>
                <height>1080</height>
                <control type="group">
                    <include>View_Pad</include>
                    <control type="button" id="8000">
                        <include>Defs_Hidden_Button</include>
                        <onclick>SendClick(8)</onclick>
                        <onleft>5005</onleft>
                        <onright>SetFocus(50,0,absolute)</onright>
                    </control>

                    <!-- Poster -->
                    <include content="View_50_Poster">
                        <param name="include" value="Animation_Left_Delay" />
                        <param name="visible" value="true" />
                    </include>


                    <!-- Info -->
                    <control type="group">
                        <top>-15</top>
                        <left>580</left>
                        <include>Animation_Right_Delay</include>
                        <control type="grouplist">
                            <orientation>vertical</orientation>
                            <usecontrolcoords>true</usecontrolcoords>
                            <itemgap>0</itemgap>
                            <include>Object_Info_Title</include>
                            <include>Object_Info_Line</include>
                            <include>Object_Info_Plot</include>
                            <include>Object_Info_Ratings</include>
                            <include>Object_Info_Details</include>
                        </control>
                        <control type="grouplist">
                            <align>bottom</align>
                            <orientation>vertical</orientation>
                            <usecontrolcoords>true</usecontrolcoords>
                            <itemgap>0</itemgap>
                            <include>Object_Info_Codecs</include>
                        </control>
                        <!-- <include>Object_Info_Buttons</include> -->
                    </control>
                </control>
            </control>

            <!-- Cast -->
            <control type="group">
                <width>1920</width>
                <height>1080</height>
                <include content="View_51_Wall_Control">
                    <param name="id" value="50" />
                    <param name="height" value="825" />
                    <param name="visible" value="true" />
                    <param name="infohide" value="false" />
                    <param name="animation" value="Animation_FadeInOut_Delay" />
                    <param name="labelinclude" value="View_Cast_Label" />
                    <param name="includecontent" value="true" />
                    <param name="content" value="plugin://script.skin.helper.service/?action=getcast&amp;movie=$INFO[ListItem.Title]&amp;downloadthumbs=tru&amp;castaction=extendedinfo" />
                    <param name="controlorientation" value="View_Vertical_Cast" />
                </include>
            </control>

            <!-- Discart and CleartArt -->
            <control type="group">
                <visible>!String.IsEmpty(ListItem.Art(discart))</visible>
                <width>1920</width>
                <height>1080</height>
                <!-- <include content="Object_Info_Arrows">
                    <param name="id" value="5006" />
                </include> -->
                <control type="button" id="5006">
                    <include>Defs_Hidden_Button</include>
                    <onleft>SetFocus(50,6,absolute)</onleft>
                    <onright>noop</onright>
                    <onback>8</onback>
                </control>
                <control type="group">
                    <include>View_Pad</include>
                    <control type="image">
                        <texture background="true">$INFO[ListItem.Art(discart)]</texture>
                        <aspectratio align="left">keep</aspectratio>
                    </control>
                    <control type="grouplist">
                        <orientation>vertical</orientation>
                        <itemgap>40</itemgap>
                        <width>780</width>
                        <right>0</right>
                        <align>center</align>
                        <control type="textbox">
                            <right>0</right>
                            <width>780</width>
                            <height>350</height>
                            <align>right</align>
                            <aligny>center</aligny>
                            <textcolor>main_fg_70</textcolor>
                            <label>$INFO[ListItem.Tagline]</label>
                            <font>font_info_display</font>
                        </control>
                        <control type="image">
                            <right>0</right>
                            <width>780</width>
                            <height>390</height>
                            <texture background="true">$INFO[ListItem.Art(clearart)]</texture>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <visible>!String.IsEmpty(ListItem.Art(clearart))</visible>
                        </control>
                    </control>
                </control>
            </control>            
        </control>

