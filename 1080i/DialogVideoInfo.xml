<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2003">
    <defaultcontrol always="true">8000</defaultcontrol>
    <onunload>ClearProperty(windowopen)</onunload>
    <onload>SetProperty(windowopen,1)</onload>
    <onload>AlarmClock(setprop,ClearProperty(windowopen),00:01,silent)</onload>
    <controls>

        
        <control type="group">
            <animation effect="fade" condition="Window.IsVisible(Home.xml)" time="1" delay="350" start="0" end="100">WindowOpen</animation>
            <include content="Topbar">
                <param name="info_hide" value="false" />
            </include>
        </control>

        <control type="list" id="300">
            <ondown>8000</ondown>
            <include>Topbar_Menu_Layout</include>
            <include>Items_Info</include>
        </control>

        <control type="group">
            <animation effect="slide" end="1920" time="200" condition="ControlGroup(9000).HasFocus()">Conditional</animation>
            <animation effect="slide" end="-1920" time="200" condition="Control.HasFocus(50) | Control.HasFocus(5050)">Conditional</animation>

            <!-- Left | Artwork -->
            <control type="grouplist" id="9000">
                <left>-1920</left>
                <orientation>horizontal</orientation>
                <itemgap>0</itemgap>
                <width>1920</width>
                <height>1080</height>
                <control type="group">
                    <include>Animation_Info_Fade_Delay</include>
                    <visible>!String.IsEmpty(ListItem.Art(discart))</visible>
                    <width>1920</width>
                    <height>1080</height>
                    <control type="button" id="5006">
                        <include>Defs_Hidden_Button</include>
                        <onright>5000</onright>
                        <onback>SetFocus(5005)</onback>
                        <onback>8000</onback>
                    </control>
                    <control type="group">
                        <include>View_Pad</include>
                        <control type="image">
                            <texture background="true">$INFO[ListItem.Art(discart)]</texture>
                            <aspectratio align="left">keep</aspectratio>
                        </control>
                        <control type="grouplist">
                            <orientation>vertical</orientation>
                            <itemgap>40</itemgap>
                            <width>700</width>
                            <right>0</right>
                            <align>center</align>
                            <control type="textbox">
                                <right>0</right>
                                <width>700</width>
                                <height>350</height>
                                <align>right</align>
                                <aligny>center</aligny>
                                <textcolor>main_fg_70</textcolor>
                                <label>$INFO[ListItem.Tagline]</label>
                                <font>font_info_display</font>
                            </control>
                            <control type="image">
