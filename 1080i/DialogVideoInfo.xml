<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2003">
    <defaultcontrol always="true">8</defaultcontrol>
    <controls>

        <!-- Top Info -->
        <control type="group">
            <animation effect="fade" condition="Window.IsVisible(Home.xml)" time="1" delay="350" start="0" end="100">WindowOpen</animation>
            <include content="Topbar">
                <param name="info_hide" value="false" />
            </include>
        </control>

        <!-- Main Group -->
        <control type="group">

            <!-- Left | Info -->
            <control type="group">
                <width>1920</width>
                <height>1080</height>

                <!-- Info Group Movie/TvShow -->
                <control type="group">
                    <top>view_top</top>
                    <left>view_pad</left>
                    <right>view_pad</right>
                    <control type="grouplist" id="9000">
                        <top>-15</top>
                        <left>-15</left>
                        <right>-15</right>
                        <height>825</height>
                        <orientation>vertical</orientation>
                        <itemgap>0</itemgap>
                        <control type="group" id="3000">
                            <height>825</height>
                            <control type="group">
                                <top>15</top>
                                <left>15</left>
                                <right>15</right>
                                <height>780</height>
                                <!-- Poster -->
                                <include content="View_50_Poster">
                                    <param name="include" value="Animation_Left_Delay" />
                                    <param name="visible" value="true" />
                                    <param name="diffuse" value="diffuse/560x810.png" />
                                </include>

                                <!-- Info -->
                                <control type="group">
                                    <top>-15</top>
                                    <left>580</left>
                                    <include>Animation_Right_Delay</include>
                                    <control type="grouplist">
                                        <orientation>vertical</orientation>
                                        <usecontrolcoords>true</usecontrolcoords>
                                        <itemgap>0</itemgap>
                                        <include>Object_Info_Title</include>
                                        <include>Object_Info_Line</include>
                                        <include>Object_Info_Plot</include>
                                        <include>Object_Info_Ratings</include>
                                        <include>Object_Info_Details</include>
                                    </control>
                                    <control type="grouplist" id="300">
                                        <ondown>4000</ondown>
                                        <include>Defs_ButtonList</include>
                                        <include content="Object_Info_Button">
                                            <param name="id" value="8" />
                                            <param name="groupid" value="8008" />
                                            <param name="label" value="Play" />
                                            <param name="icon" value="special://skin/extras/icons/play3.png" />
                                        </include>
                                        <include content="Object_Info_Button">
                                            <param name="id" value="11" />
                                            <param name="groupid" value="8011" />
                                            <param name="label" value="Trailer" />
                                            <param name="icon" value="special://skin/extras/icons/video.png" />
                                        </include>
                                        <include content="Object_Info_Button">
                                            <param name="id" value="10" />
                                            <param name="groupid" value="8010" />
                                            <param name="label" value="Thumb" />
                                            <param name="icon" value="special://skin/extras/icons/paintbrush.png" />
                                        </include>
                                        <include content="Object_Info_Button">
                                            <param name="id" value="6" />
                                            <param name="groupid" value="8006" />
                                            <param name="label" value="Refresh" />
                                            <param name="icon" value="special://skin/extras/icons/update.png" />
                                        </include>
                                        <include content="Object_Info_Button">
                                            <param name="id" value="8199" />
                                            <param name="groupid" value="8099" />
                                            <param name="label" value="Options" />
                                            <param name="icon" value="special://skin/extras/icons/settings.png" />
                                        </include>
                                    </control>
                                </control>
                            </control>
                        </control>

                        <control type="group" id="4000">
                            <height>825</height>
                            <control type="grouplist" id="4100">
                                <onup>300</onup>
                                <ondown>6000</ondown>
                                <height>825</height>
                                <orientation>vertical</orientation>
                                <itemgap>0</itemgap>
                                <include content="View_51_Wall_Container">
                                    <param name="id" value="5000" />
                                    <param name="height" value="412.5" />
                                    <param name="orientation" value="horizontal" />
                                    <param name="labelinclude" value="View_Cast_Label" />
                                    <param name="onleft" value="5000" />
                                    <param name="onright" value="5000" />
                                    <param name="visible" value="Integer.IsGreater(Container(5000).NumItems,1) | Container(5000).IsUpdating" />
                                    <content>$VAR[Defs_Cast_Content]</content>
                                </include>

                                <include content="View_51_Wall_Container">
                                    <param name="id" value="5001" />
                                    <param name="height" value="412.5" />
                                    <param name="orientation" value="horizontal" />
                                    <param name="visible" value="Integer.IsGreater(Container(5001).NumItems,1) | Container(5001).IsUpdating" />
                                    <content>
                                        <item>
                                            <label>$INFO[ListItem.Set]</label>
                                            <icon>DefaultSets.png</icon>
                                            <onclick>Close</onclick>
                                            <onclick>Close</onclick>
                                            <onclick>ActivateWindow(videos,$INFO[ListItem.SetID,videodb://movies/sets/,/],return)</onclick>
                                        </item>
                                    </content>
                                    <content limit="6" target="videos">$INFO[ListItem.SetID,videodb://movies/sets/,/]</content>
                                </include>
                                <include content="View_51_Wall_Container">
                                    <param name="id" value="5002" />
                                    <param name="height" value="412.5" />
                                    <param name="orientation" value="horizontal" />
                                    <param name="visible" value="Integer.IsGreater(Container(5002).NumItems,1) | Container(5002).IsUpdating" />
                                    <content>
                                        <item>
                                            <label>Similar Movies</label>
                                            <icon>DefaultTags.png</icon>
                                            <onclick>Close</onclick>
                                            <onclick>Close</onclick>
                                            <onclick>ActivateWindow(videos,$INFO[ListItem.IMDBNumber,plugin://script.skin.helper.widgets/?action=similar&amp;mediatype=movies&amp;imdbid=,],return)</onclick>
                                        </item>
                                    </content>
                                    <content limit="6" target="videos">$INFO[ListItem.IMDBNumber,plugin://script.skin.helper.widgets/?action=similar&amp;mediatype=movies&amp;imdbid=,]</content>
                                </include>
                                <include content="View_51_Wall_Container">
                                    <param name="id" value="5003" />
                                    <param name="height" value="412.5" />
                                    <param name="orientation" value="horizontal" />
                                    <param name="visible" value="Integer.IsGreater(Container(5003).NumItems,1) | Container(5003).IsUpdating" />
                                    <content>
                                        <item>
                                            <label>$INFO[ListItem.Director,By ,]</label>
                                            <icon>DefaultDirector.png</icon>
                                            <onclick>SendClick(13)</onclick>
                                        </item>
                                    </content>
                                    <content limit="6" target="videos">$INFO[ListItem.Director,plugin://script.extendedinfo?info=personmovies&amp;&amp;person=,]</content>
                                </include>
                                <include content="View_51_Wall_Container">
                                    <param name="id" value="5004" />
                                    <param name="height" value="412.5" />
                                    <param name="orientation" value="horizontal" />
                                    <param name="visible" value="Integer.IsGreater(Container(5004).NumItems,1) | Container(5004).IsUpdating" />
                                    <content>
                                        <item>
                                            <label>$INFO[ListItem.Studio]</label>
                                            <onclick>Close</onclick>
                                            <onclick>Close</onclick>
                                            <onclick>ActivateWindow(videos,$INFO[ListItem.Studio,plugin://script.extendedinfo?info=studio&amp;&amp;studio=,],return)</onclick>
                                            <icon>DefaultStudios.png</icon>
                                        </item>
                                    </content>
                                    <content limit="6" target="videos">$INFO[ListItem.Studio,plugin://script.extendedinfo?info=studio&amp;&amp;studio=,]</content>
                                </include>
                            </control>
                        </control>

                        <include content="Info_Gallery">
                            <param name="id" value="6000" />
                            <onleft>noop</onleft>
                            <onright>noop</onright>
                            <onback>SetFocus(5000)</onback>
                            <onback>8</onback>
                            <include>Items_Info_Gallery</include>
                        </include>
                        <control type="group"></control>
                    </control>
                </control>
            </control>

           
        </control>


        <control type="group">
            <visible>ControlGroup(300).HasFocus()</visible>
            <!-- Codecs -->
            <include content="Object_Codecs">
                <param name="infohide" value="false" />
            </include>
        </control>        

       
